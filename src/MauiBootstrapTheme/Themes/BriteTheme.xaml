<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    x:Class="MauiBootstrapTheme.Themes.BriteTheme">

    <!-- ═══════════════════════════════════════════════════════════════════
         BRITE THEME
         Vibrant neon-inspired light theme with bold colors
         ═══════════════════════════════════════════════════════════════════ -->

    <!-- ═══ SEMANTIC COLORS ═══ -->
    <Color x:Key="Primary">#a2e436</Color>
    <Color x:Key="Secondary">#ffffff</Color>
    <Color x:Key="Success">#68d391</Color>
    <Color x:Key="Danger">#f56565</Color>
    <Color x:Key="Warning">#ffc700</Color>
    <Color x:Key="Info">#22d2ed</Color>
    <Color x:Key="Light">#f5f5f5</Color>
    <Color x:Key="Dark">#000000</Color>

    <!-- ═══ ON-COLORS ═══ -->
    <Color x:Key="OnPrimary">#000000</Color>
    <Color x:Key="OnSecondary">#000000</Color>
    <Color x:Key="OnSuccess">#000000</Color>
    <Color x:Key="OnDanger">#000000</Color>
    <Color x:Key="OnWarning">#000000</Color>
    <Color x:Key="OnInfo">#000000</Color>
    <Color x:Key="OnLight">#333333</Color>
    <Color x:Key="OnDark">White</Color>

    <!-- ═══ SURFACE COLORS ═══ -->
    <Color x:Key="Background">#ffffff</Color>
    <Color x:Key="Surface">#ffffff</Color>
    <Color x:Key="OnBackground">#333333</Color>
    <Color x:Key="OnSurface">#333333</Color>
    <Color x:Key="HeadingColor">#333333</Color>
    <Color x:Key="HeadingColorAlt">#333333</Color>
    <Color x:Key="Outline">#cccccc</Color>
    <Color x:Key="OutlineVariant">#dddddd</Color>
    <Color x:Key="Muted">#999999</Color>

    <!-- ═══ GRAY SCALE ═══ -->
    <Color x:Key="Gray100">#f5f5f5</Color>
    <Color x:Key="Gray200">#eeeeee</Color>
    <Color x:Key="Gray300">#dddddd</Color>
    <Color x:Key="Gray400">#cccccc</Color>
    <Color x:Key="Gray500">#999999</Color>
    <Color x:Key="Gray600">#777777</Color>
    <Color x:Key="Gray700">#555555</Color>
    <Color x:Key="Gray800">#444444</Color>
    <Color x:Key="Gray900">#333333</Color>

    <!-- ═══ TYPOGRAPHY ═══ -->
    <x:String x:Key="FontFamily"></x:String>
    <x:Double x:Key="FontSizeBase">16</x:Double>
    <x:Double x:Key="FontSizeSm">14</x:Double>
    <x:Double x:Key="FontSizeLg">20</x:Double>
    <x:Double x:Key="FontSizeH1">40</x:Double>
    <x:Double x:Key="FontSizeH2">32</x:Double>
    <x:Double x:Key="FontSizeH3">28</x:Double>
    <x:Double x:Key="FontSizeH4">24</x:Double>
    <x:Double x:Key="FontSizeH5">20</x:Double>
    <x:Double x:Key="FontSizeH6">16</x:Double>

    <!-- ═══ SPACING & SIZING ═══ -->
    <x:Double x:Key="CornerRadius">8</x:Double>
    <x:Double x:Key="CornerRadiusSm">6</x:Double>
    <x:Double x:Key="CornerRadiusLg">12</x:Double>
    <x:Double x:Key="CornerRadiusPill">50</x:Double>
    <x:Double x:Key="BorderWidth">2</x:Double>
    <x:Double x:Key="ButtonHeight">38</x:Double>
    <x:Double x:Key="ButtonHeightSm">31</x:Double>
    <x:Double x:Key="ButtonHeightLg">48</x:Double>
    <x:Double x:Key="InputHeight">38</x:Double>
    <x:Double x:Key="InputHeightSm">31</x:Double>
    <x:Double x:Key="InputHeightLg">48</x:Double>
    <Thickness x:Key="ButtonPadding">16,10</Thickness>
    <Thickness x:Key="ButtonPaddingSm">12,6</Thickness>
    <Thickness x:Key="ButtonPaddingLg">20,12</Thickness>
    <Thickness x:Key="InputPadding">14,10</Thickness>
    <Color x:Key="InputBackground">#ffffff</Color>
    <Color x:Key="InputText">#333333</Color>

    <!-- ═══════════════════════════════════════════════════════════════════
         IMPLICIT STYLES
         ═══════════════════════════════════════════════════════════════════ -->

    <Style TargetType="Button">
        <Setter Property="Background" Value="{DynamicResource Primary}"/>
        <Setter Property="TextColor" Value="{DynamicResource OnPrimary}"/>
        <Setter Property="CornerRadius" Value="{DynamicResource CornerRadius}"/>
        <Setter Property="FontFamily" Value="{DynamicResource FontFamily}"/>
        <Setter Property="FontSize" Value="{DynamicResource FontSizeBase}"/>
        <Setter Property="Padding" Value="{DynamicResource ButtonPadding}"/>
        <Setter Property="MinimumHeightRequest" Value="{DynamicResource ButtonHeight}"/>
        <Setter Property="BorderWidth" Value="{DynamicResource BorderWidth}"/>
        <Setter Property="BorderColor" Value="{DynamicResource Dark}"/>
    </Style>

    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource OnBackground}"/>
        <Setter Property="FontFamily" Value="{DynamicResource FontFamily}"/>
        <Setter Property="FontSize" Value="{DynamicResource FontSizeBase}"/>
    </Style>

    <Style TargetType="Entry">
        <Setter Property="TextColor" Value="{DynamicResource InputText}"/>
        <Setter Property="Background" Value="{DynamicResource InputBackground}"/>
        <Setter Property="FontFamily" Value="{DynamicResource FontFamily}"/>
        <Setter Property="FontSize" Value="{DynamicResource FontSizeBase}"/>
        <Setter Property="MinimumHeightRequest" Value="{DynamicResource InputHeight}"/>
    </Style>

    <Style TargetType="Editor">
        <Setter Property="TextColor" Value="{DynamicResource OnSurface}"/>
        <Setter Property="Background" Value="{DynamicResource Surface}"/>
        <Setter Property="FontFamily" Value="{DynamicResource FontFamily}"/>
        <Setter Property="FontSize" Value="{DynamicResource FontSizeBase}"/>
    </Style>

    <Style TargetType="ProgressBar">
        <Setter Property="ProgressColor" Value="{DynamicResource Primary}"/>
        <Setter Property="MinimumHeightRequest" Value="16"/>
    </Style>

    <!-- ═══ BORDER (default) ═══ -->
    <Style TargetType="Border">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Stroke" Value="Transparent"/>
        <Setter Property="StrokeThickness" Value="0"/>
    </Style>

    <Style TargetType="ContentPage" ApplyToDerivedTypes="True">
        <Setter Property="Background" Value="{DynamicResource Background}"/>
    </Style>

    <!-- ═══ SHELL ═══ -->
    <Style TargetType="Shell" ApplyToDerivedTypes="True">
        <Setter Property="Shell.BackgroundColor" Value="{DynamicResource Primary}"/>
        <Setter Property="Shell.ForegroundColor" Value="{DynamicResource OnPrimary}"/>
        <Setter Property="Shell.TitleColor" Value="{DynamicResource OnPrimary}"/>
        <Setter Property="Shell.TabBarBackgroundColor" Value="{DynamicResource Background}"/>
        <Setter Property="Shell.TabBarForegroundColor" Value="{DynamicResource Primary}"/>
        <Setter Property="Shell.TabBarUnselectedColor" Value="{DynamicResource Gray500}"/>
        <Setter Property="FlyoutBackgroundColor" Value="{DynamicResource Background}"/>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════
         BUTTON VARIANT STYLES
         ═══════════════════════════════════════════════════════════════════ -->

    <Style TargetType="Button" Class="btn-primary">
        <Setter Property="Background" Value="{DynamicResource Primary}"/>
        <Setter Property="TextColor" Value="{DynamicResource OnPrimary}"/>
    </Style>

    <Style TargetType="Button" Class="btn-secondary">
        <Setter Property="Background" Value="{DynamicResource Secondary}"/>
        <Setter Property="TextColor" Value="{DynamicResource OnSecondary}"/>
    </Style>

    <Style TargetType="Button" Class="btn-success">
        <Setter Property="Background" Value="{DynamicResource Success}"/>
        <Setter Property="TextColor" Value="{DynamicResource OnSuccess}"/>
    </Style>

    <Style TargetType="Button" Class="btn-danger">
        <Setter Property="Background" Value="{DynamicResource Danger}"/>
        <Setter Property="TextColor" Value="{DynamicResource OnDanger}"/>
    </Style>

    <Style TargetType="Button" Class="btn-warning">
        <Setter Property="Background" Value="{DynamicResource Warning}"/>
        <Setter Property="TextColor" Value="{DynamicResource OnWarning}"/>
    </Style>

    <Style TargetType="Button" Class="btn-info">
        <Setter Property="Background" Value="{DynamicResource Info}"/>
        <Setter Property="TextColor" Value="{DynamicResource OnInfo}"/>
    </Style>

    <Style TargetType="Button" Class="btn-light">
        <Setter Property="Background" Value="{DynamicResource Light}"/>
        <Setter Property="TextColor" Value="{DynamicResource OnLight}"/>
    </Style>

    <Style TargetType="Button" Class="btn-dark">
        <Setter Property="Background" Value="{DynamicResource Dark}"/>
        <Setter Property="TextColor" Value="{DynamicResource OnDark}"/>
    </Style>

    <!-- ═══ OUTLINE VARIANTS ═══ -->
    <Style TargetType="Button" Class="btn-outline-primary">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="TextColor" Value="{DynamicResource Primary}"/>
        <Setter Property="BorderColor" Value="{DynamicResource Primary}"/>
        <Setter Property="BorderWidth" Value="{DynamicResource BorderWidth}"/>
    </Style>

    <Style TargetType="Button" Class="btn-outline-secondary">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="TextColor" Value="{DynamicResource Secondary}"/>
        <Setter Property="BorderColor" Value="{DynamicResource Secondary}"/>
        <Setter Property="BorderWidth" Value="{DynamicResource BorderWidth}"/>
    </Style>

    <Style TargetType="Button" Class="btn-outline-success">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="TextColor" Value="{DynamicResource Success}"/>
        <Setter Property="BorderColor" Value="{DynamicResource Success}"/>
        <Setter Property="BorderWidth" Value="{DynamicResource BorderWidth}"/>
    </Style>

    <Style TargetType="Button" Class="btn-outline-danger">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="TextColor" Value="{DynamicResource Danger}"/>
        <Setter Property="BorderColor" Value="{DynamicResource Danger}"/>
        <Setter Property="BorderWidth" Value="{DynamicResource BorderWidth}"/>
    </Style>

    <Style TargetType="Button" Class="btn-outline-warning">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="TextColor" Value="{DynamicResource Warning}"/>
        <Setter Property="BorderColor" Value="{DynamicResource Warning}"/>
        <Setter Property="BorderWidth" Value="{DynamicResource BorderWidth}"/>
    </Style>

    <Style TargetType="Button" Class="btn-outline-info">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="TextColor" Value="{DynamicResource Info}"/>
        <Setter Property="BorderColor" Value="{DynamicResource Info}"/>
        <Setter Property="BorderWidth" Value="{DynamicResource BorderWidth}"/>
    </Style>

    <Style TargetType="Button" Class="btn-outline-light">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="TextColor" Value="{DynamicResource Light}"/>
        <Setter Property="BorderColor" Value="{DynamicResource Light}"/>
        <Setter Property="BorderWidth" Value="{DynamicResource BorderWidth}"/>
    </Style>

    <Style TargetType="Button" Class="btn-outline-dark">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="TextColor" Value="{DynamicResource Dark}"/>
        <Setter Property="BorderColor" Value="{DynamicResource Dark}"/>
        <Setter Property="BorderWidth" Value="{DynamicResource BorderWidth}"/>
    </Style>

    <!-- ═══ SIZE VARIANTS ═══ -->
    <Style TargetType="Button" Class="btn-lg">
        <Setter Property="FontSize" Value="{DynamicResource FontSizeLg}"/>
        <Setter Property="Padding" Value="{DynamicResource ButtonPaddingLg}"/>
        <Setter Property="MinimumHeightRequest" Value="{DynamicResource ButtonHeightLg}"/>
        <Setter Property="CornerRadius" Value="{DynamicResource CornerRadiusLg}"/>
    </Style>

    <Style TargetType="Button" Class="btn-sm">
        <Setter Property="FontSize" Value="{DynamicResource FontSizeSm}"/>
        <Setter Property="Padding" Value="{DynamicResource ButtonPaddingSm}"/>
        <Setter Property="MinimumHeightRequest" Value="{DynamicResource ButtonHeightSm}"/>
        <Setter Property="CornerRadius" Value="{DynamicResource CornerRadiusSm}"/>
    </Style>

    <Style TargetType="Button" Class="btn-pill">
        <Setter Property="CornerRadius" Value="{DynamicResource CornerRadiusPill}"/>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════
         CARD & COMPONENT STYLES (via StyleClass)
         Analogous to Bootstrap CSS: .card, .card-body, .badge, .shadow, etc.
         ═══════════════════════════════════════════════════════════════════ -->

    <!-- card: Surface background with outline border and rounded corners -->
    <Style TargetType="Border" Class="card">
        <Setter Property="Background" Value="{DynamicResource Surface}"/>
        <Setter Property="Stroke" Value="{DynamicResource Outline}"/>
        <Setter Property="StrokeThickness" Value="{DynamicResource BorderWidth}"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 6"/>
        <Setter Property="Padding" Value="16"/>
    </Style>

    <!-- shadow: Adds a drop shadow to a card/border -->
    <Style TargetType="Border" Class="shadow">
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Brush="Black" Offset="0,2" Radius="8" Opacity="0.15" />
            </Setter.Value>
        </Setter>
    </Style>

    <!-- badge: Small rounded label container -->
    <Style TargetType="Border" Class="badge">
        <Setter Property="StrokeThickness" Value="0"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 50"/>
        <Setter Property="Padding" Value="8,4"/>
    </Style>

    <!-- text-bg-* : Combined background + text color cards -->
    <Style TargetType="Border" Class="text-bg-primary">
        <Setter Property="Background" Value="{DynamicResource Primary}"/>
        <Setter Property="StrokeThickness" Value="0"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 6"/>
        <Setter Property="Padding" Value="16"/>
    </Style>
    <Style TargetType="Border" Class="text-bg-secondary">
        <Setter Property="Background" Value="{DynamicResource Secondary}"/>
        <Setter Property="StrokeThickness" Value="0"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 6"/>
        <Setter Property="Padding" Value="16"/>
    </Style>
    <Style TargetType="Border" Class="text-bg-success">
        <Setter Property="Background" Value="{DynamicResource Success}"/>
        <Setter Property="StrokeThickness" Value="0"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 6"/>
        <Setter Property="Padding" Value="16"/>
    </Style>
    <Style TargetType="Border" Class="text-bg-danger">
        <Setter Property="Background" Value="{DynamicResource Danger}"/>
        <Setter Property="StrokeThickness" Value="0"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 6"/>
        <Setter Property="Padding" Value="16"/>
    </Style>
    <Style TargetType="Border" Class="text-bg-warning">
        <Setter Property="Background" Value="{DynamicResource Warning}"/>
        <Setter Property="StrokeThickness" Value="0"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 6"/>
        <Setter Property="Padding" Value="16"/>
    </Style>
    <Style TargetType="Border" Class="text-bg-info">
        <Setter Property="Background" Value="{DynamicResource Info}"/>
        <Setter Property="StrokeThickness" Value="0"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 6"/>
        <Setter Property="Padding" Value="16"/>
    </Style>
    <Style TargetType="Border" Class="text-bg-light">
        <Setter Property="Background" Value="{DynamicResource Light}"/>
        <Setter Property="StrokeThickness" Value="0"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 6"/>
        <Setter Property="Padding" Value="16"/>
    </Style>
    <Style TargetType="Border" Class="text-bg-dark">
        <Setter Property="Background" Value="{DynamicResource Dark}"/>
        <Setter Property="StrokeThickness" Value="0"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 6"/>
        <Setter Property="Padding" Value="16"/>
    </Style>

    <!-- bg-* badge backgrounds -->
    <Style TargetType="Border" Class="bg-primary">
        <Setter Property="Background" Value="{DynamicResource Primary}"/>
    </Style>
    <Style TargetType="Border" Class="bg-secondary">
        <Setter Property="Background" Value="{DynamicResource Secondary}"/>
    </Style>
    <Style TargetType="Border" Class="bg-success">
        <Setter Property="Background" Value="{DynamicResource Success}"/>
    </Style>
    <Style TargetType="Border" Class="bg-danger">
        <Setter Property="Background" Value="{DynamicResource Danger}"/>
    </Style>
    <Style TargetType="Border" Class="bg-warning">
        <Setter Property="Background" Value="{DynamicResource Warning}"/>
    </Style>
    <Style TargetType="Border" Class="bg-info">
        <Setter Property="Background" Value="{DynamicResource Info}"/>
    </Style>

    <!-- On-color label styles for use inside text-bg-* cards -->
    <Style TargetType="Label" Class="on-primary">
        <Setter Property="TextColor" Value="{DynamicResource OnPrimary}"/>
    </Style>
    <Style TargetType="Label" Class="on-secondary">
        <Setter Property="TextColor" Value="{DynamicResource OnSecondary}"/>
    </Style>
    <Style TargetType="Label" Class="on-success">
        <Setter Property="TextColor" Value="{DynamicResource OnSuccess}"/>
    </Style>
    <Style TargetType="Label" Class="on-danger">
        <Setter Property="TextColor" Value="{DynamicResource OnDanger}"/>
    </Style>
    <Style TargetType="Label" Class="on-warning">
        <Setter Property="TextColor" Value="{DynamicResource OnWarning}"/>
    </Style>
    <Style TargetType="Label" Class="on-info">
        <Setter Property="TextColor" Value="{DynamicResource OnInfo}"/>
    </Style>
    <Style TargetType="Label" Class="on-light">
        <Setter Property="TextColor" Value="{DynamicResource OnLight}"/>
    </Style>
    <Style TargetType="Label" Class="on-dark">
        <Setter Property="TextColor" Value="{DynamicResource OnDark}"/>
    </Style>

    <!-- ═══ LABEL STYLES ═══ -->
    <Style TargetType="Label" Class="h1">
        <Setter Property="FontSize" Value="{DynamicResource FontSizeH1}"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="TextColor" Value="{DynamicResource HeadingColor}"/>
    </Style>

    <Style TargetType="Label" Class="h2">
        <Setter Property="FontSize" Value="{DynamicResource FontSizeH2}"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="TextColor" Value="{DynamicResource HeadingColorAlt}"/>
    </Style>

    <Style TargetType="Label" Class="h3">
        <Setter Property="FontSize" Value="{DynamicResource FontSizeH3}"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="TextColor" Value="{DynamicResource HeadingColorAlt}"/>
    </Style>

    <Style TargetType="Label" Class="h4">
        <Setter Property="FontSize" Value="{DynamicResource FontSizeH4}"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="TextColor" Value="{DynamicResource HeadingColorAlt}"/>
    </Style>

    <Style TargetType="Label" Class="h5">
        <Setter Property="FontSize" Value="{DynamicResource FontSizeH5}"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="TextColor" Value="{DynamicResource HeadingColorAlt}"/>
    </Style>

    <Style TargetType="Label" Class="h6">
        <Setter Property="FontSize" Value="{DynamicResource FontSizeH6}"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="TextColor" Value="{DynamicResource HeadingColorAlt}"/>
    </Style>

    <Style TargetType="Label" Class="text-muted">
        <Setter Property="TextColor" Value="{DynamicResource Muted}"/>
    </Style>

    <!-- ═══ PROGRESS BAR VARIANTS ═══ -->
    <Style TargetType="ProgressBar" Class="progress-primary">
        <Setter Property="ProgressColor" Value="{DynamicResource Primary}"/>
    </Style>

    <Style TargetType="ProgressBar" Class="progress-success">
        <Setter Property="ProgressColor" Value="{DynamicResource Success}"/>
    </Style>

    <Style TargetType="ProgressBar" Class="progress-danger">
        <Setter Property="ProgressColor" Value="{DynamicResource Danger}"/>
    </Style>

</ResourceDictionary>
