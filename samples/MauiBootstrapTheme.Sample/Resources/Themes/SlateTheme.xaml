<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MauiBootstrapTheme.Sample.Resources.Themes.SlateTheme">
    
    <!-- Bootswatch Slate Theme - Professional dark gray theme -->
    
    <!-- Semantic Colors -->
    <Color x:Key="ThemePrimary">#3a3f44</Color>
    <Color x:Key="ThemeSecondary">#7a8288</Color>
    <Color x:Key="ThemeSuccess">#62c462</Color>
    <Color x:Key="ThemeDanger">#ee5f5b</Color>
    <Color x:Key="ThemeWarning">#f89406</Color>
    <Color x:Key="ThemeInfo">#5bc0de</Color>
    <Color x:Key="ThemeLight">#f8f9fa</Color>
    <Color x:Key="ThemeDark">#272b30</Color>
    
    <!-- Light Mode (Slate is dark themed) -->
    <Color x:Key="ThemeLightBackground">#272b30</Color>
    <Color x:Key="ThemeLightSurface">#3a3f44</Color>
    <Color x:Key="ThemeLightOnBackground">#c8c8c8</Color>
    <Color x:Key="ThemeLightOnSurface">#c8c8c8</Color>
    <Color x:Key="ThemeLightOutline">#52575c</Color>
    <Color x:Key="ThemeLightMuted">#7a8288</Color>
    
    <!-- Dark Mode Surface Colors -->
    <Color x:Key="ThemeDarkBackground">#272b30</Color>
    <Color x:Key="ThemeDarkSurface">#3a3f44</Color>
    <Color x:Key="ThemeDarkOnBackground">#c8c8c8</Color>
    <Color x:Key="ThemeDarkOnSurface">#c8c8c8</Color>
    <Color x:Key="ThemeDarkOutline">#52575c</Color>
    <Color x:Key="ThemeDarkMuted">#7a8288</Color>
    
    <!-- No custom font -->
    <x:String x:Key="ThemeFontFamily"></x:String>
    
    <!-- Standard corners -->
    <x:Double x:Key="ThemeCornerRadius">6</x:Double>
    <x:Double x:Key="ThemeCornerRadiusSm">4</x:Double>
    <x:Double x:Key="ThemeCornerRadiusLg">8</x:Double>
    
</ResourceDictionary>
