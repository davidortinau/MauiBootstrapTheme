<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MauiBootstrapTheme.Sample.Resources.Themes.BriteTheme">
    
    <!-- Bootswatch Brite Theme - Bold and bright colors -->
    
    <!-- Semantic Colors -->
    <Color x:Key="ThemePrimary">#a2e436</Color>
    <Color x:Key="ThemeSecondary">#ff7518</Color>
    <Color x:Key="ThemeSuccess">#32cd32</Color>
    <Color x:Key="ThemeDanger">#ff4444</Color>
    <Color x:Key="ThemeWarning">#ffff00</Color>
    <Color x:Key="ThemeInfo">#00bfff</Color>
    <Color x:Key="ThemeLight">#f5f5f5</Color>
    <Color x:Key="ThemeDark">#333333</Color>
    
    <!-- Light Mode Surface Colors -->
    <Color x:Key="ThemeLightBackground">#ffffff</Color>
    <Color x:Key="ThemeLightSurface">#ffffff</Color>
    <Color x:Key="ThemeLightOnBackground">#333333</Color>
    <Color x:Key="ThemeLightOnSurface">#333333</Color>
    <Color x:Key="ThemeLightOutline">#cccccc</Color>
    <Color x:Key="ThemeLightMuted">#666666</Color>
    
    <!-- Dark Mode Surface Colors -->
    <Color x:Key="ThemeDarkBackground">#222222</Color>
    <Color x:Key="ThemeDarkSurface">#333333</Color>
    <Color x:Key="ThemeDarkOnBackground">#f5f5f5</Color>
    <Color x:Key="ThemeDarkOnSurface">#f5f5f5</Color>
    <Color x:Key="ThemeDarkOutline">#555555</Color>
    <Color x:Key="ThemeDarkMuted">#999999</Color>
    
    <!-- No custom font -->
    <x:String x:Key="ThemeFontFamily"></x:String>
    
    <!-- Slightly larger corners -->
    <x:Double x:Key="ThemeCornerRadius">8</x:Double>
    <x:Double x:Key="ThemeCornerRadiusSm">6</x:Double>
    <x:Double x:Key="ThemeCornerRadiusLg">12</x:Double>
    
</ResourceDictionary>
