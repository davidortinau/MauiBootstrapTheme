<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MauiBootstrapTheme.Sample.Resources.Themes.DefaultTheme">
    
    <!-- Bootstrap 5 Default Theme -->
    
    <!-- Semantic Colors -->
    <Color x:Key="ThemePrimary">#0d6efd</Color>
    <Color x:Key="ThemeSecondary">#6c757d</Color>
    <Color x:Key="ThemeSuccess">#198754</Color>
    <Color x:Key="ThemeDanger">#dc3545</Color>
    <Color x:Key="ThemeWarning">#ffc107</Color>
    <Color x:Key="ThemeInfo">#0dcaf0</Color>
    <Color x:Key="ThemeLight">#f8f9fa</Color>
    <Color x:Key="ThemeDark">#212529</Color>
    
    <!-- Light Mode Surface Colors -->
    <Color x:Key="ThemeLightBackground">#ffffff</Color>
    <Color x:Key="ThemeLightSurface">#ffffff</Color>
    <Color x:Key="ThemeLightOnBackground">#212529</Color>
    <Color x:Key="ThemeLightOnSurface">#212529</Color>
    <Color x:Key="ThemeLightOutline">#dee2e6</Color>
    <Color x:Key="ThemeLightMuted">#6c757d</Color>
    
    <!-- Dark Mode Surface Colors -->
    <Color x:Key="ThemeDarkBackground">#212529</Color>
    <Color x:Key="ThemeDarkSurface">#343a40</Color>
    <Color x:Key="ThemeDarkOnBackground">#dee2e6</Color>
    <Color x:Key="ThemeDarkOnSurface">#f8f9fa</Color>
    <Color x:Key="ThemeDarkOutline">#495057</Color>
    <Color x:Key="ThemeDarkMuted">#adb5bd</Color>
    
    <!-- Font -->
    <x:String x:Key="ThemeFontFamily"></x:String>
    
    <!-- Corner Radius -->
    <x:Double x:Key="ThemeCornerRadius">6</x:Double>
    <x:Double x:Key="ThemeCornerRadiusSm">4</x:Double>
    <x:Double x:Key="ThemeCornerRadiusLg">8</x:Double>
    
</ResourceDictionary>
