<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MauiBootstrapTheme.Sample.Resources.Themes.FlatlyTheme">
    
    <!-- Bootswatch Flatly Theme - Flat design with clean lines -->
    
    <!-- Semantic Colors -->
    <Color x:Key="ThemePrimary">#2c3e50</Color>
    <Color x:Key="ThemeSecondary">#95a5a6</Color>
    <Color x:Key="ThemeSuccess">#18bc9c</Color>
    <Color x:Key="ThemeDanger">#e74c3c</Color>
    <Color x:Key="ThemeWarning">#f39c12</Color>
    <Color x:Key="ThemeInfo">#3498db</Color>
    <Color x:Key="ThemeLight">#ecf0f1</Color>
    <Color x:Key="ThemeDark">#7b8a8b</Color>
    
    <!-- Light Mode Surface Colors -->
    <Color x:Key="ThemeLightBackground">#ffffff</Color>
    <Color x:Key="ThemeLightSurface">#ffffff</Color>
    <Color x:Key="ThemeLightOnBackground">#212529</Color>
    <Color x:Key="ThemeLightOnSurface">#212529</Color>
    <Color x:Key="ThemeLightOutline">#dee2e6</Color>
    <Color x:Key="ThemeLightMuted">#95a5a6</Color>
    
    <!-- Dark Mode Surface Colors -->
    <Color x:Key="ThemeDarkBackground">#2c3e50</Color>
    <Color x:Key="ThemeDarkSurface">#34495e</Color>
    <Color x:Key="ThemeDarkOnBackground">#ecf0f1</Color>
    <Color x:Key="ThemeDarkOnSurface">#ecf0f1</Color>
    <Color x:Key="ThemeDarkOutline">#4a6278</Color>
    <Color x:Key="ThemeDarkMuted">#95a5a6</Color>
    
    <!-- No custom font -->
    <x:String x:Key="ThemeFontFamily"></x:String>
    
    <!-- Standard corners -->
    <x:Double x:Key="ThemeCornerRadius">6</x:Double>
    <x:Double x:Key="ThemeCornerRadiusSm">4</x:Double>
    <x:Double x:Key="ThemeCornerRadiusLg">8</x:Double>
    
</ResourceDictionary>
