<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MauiBootstrapTheme.Sample.Resources.Themes.VaporTheme">
    
    <!-- Bootswatch Vapor Theme - Cyberpunk neon with purple/pink -->
    
    <!-- Semantic Colors -->
    <Color x:Key="ThemePrimary">#6f42c1</Color>
    <Color x:Key="ThemeSecondary">#ea39b8</Color>
    <Color x:Key="ThemeSuccess">#3cf281</Color>
    <Color x:Key="ThemeDanger">#ff6f6f</Color>
    <Color x:Key="ThemeWarning">#fff787</Color>
    <Color x:Key="ThemeInfo">#32fbe2</Color>
    <Color x:Key="ThemeLight">#44d9e8</Color>
    <Color x:Key="ThemeDark">#1a1a2e</Color>
    
    <!-- Light Mode (Vapor is inherently dark, but we provide light colors) -->
    <Color x:Key="ThemeLightBackground">#190831</Color>
    <Color x:Key="ThemeLightSurface">#1a1a2e</Color>
    <Color x:Key="ThemeLightOnBackground">#ffffff</Color>
    <Color x:Key="ThemeLightOnSurface">#ffffff</Color>
    <Color x:Key="ThemeLightOutline">#6f42c1</Color>
    <Color x:Key="ThemeLightMuted">#ea39b8</Color>
    
    <!-- Dark Mode Surface Colors (same as light for this theme) -->
    <Color x:Key="ThemeDarkBackground">#190831</Color>
    <Color x:Key="ThemeDarkSurface">#1a1a2e</Color>
    <Color x:Key="ThemeDarkOnBackground">#ffffff</Color>
    <Color x:Key="ThemeDarkOnSurface">#ffffff</Color>
    <Color x:Key="ThemeDarkOutline">#6f42c1</Color>
    <Color x:Key="ThemeDarkMuted">#ea39b8</Color>
    
    <!-- Retro terminal aesthetic font -->
    <x:String x:Key="ThemeFontFamily">CourierNewPSMT</x:String>
    
    <!-- Sharp edges for cyberpunk look -->
    <x:Double x:Key="ThemeCornerRadius">0</x:Double>
    <x:Double x:Key="ThemeCornerRadiusSm">0</x:Double>
    <x:Double x:Key="ThemeCornerRadiusLg">0</x:Double>
    
</ResourceDictionary>
