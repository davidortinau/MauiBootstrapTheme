<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MauiBootstrapTheme.Sample.Resources.Themes.DarklyTheme">
    
    <!-- Bootswatch Darkly Theme - Dark Bootstrap theme -->
    
    <!-- Semantic Colors -->
    <Color x:Key="ThemePrimary">#375a7f</Color>
    <Color x:Key="ThemeSecondary">#444444</Color>
    <Color x:Key="ThemeSuccess">#00bc8c</Color>
    <Color x:Key="ThemeDanger">#e74c3c</Color>
    <Color x:Key="ThemeWarning">#f39c12</Color>
    <Color x:Key="ThemeInfo">#3498db</Color>
    <Color x:Key="ThemeLight">#adb5bd</Color>
    <Color x:Key="ThemeDark">#303030</Color>
    
    <!-- Light Mode (Darkly theme still has dark backgrounds) -->
    <Color x:Key="ThemeLightBackground">#222222</Color>
    <Color x:Key="ThemeLightSurface">#303030</Color>
    <Color x:Key="ThemeLightOnBackground">#ffffff</Color>
    <Color x:Key="ThemeLightOnSurface">#ffffff</Color>
    <Color x:Key="ThemeLightOutline">#444444</Color>
    <Color x:Key="ThemeLightMuted">#adb5bd</Color>
    
    <!-- Dark Mode Surface Colors (same as light for this theme) -->
    <Color x:Key="ThemeDarkBackground">#222222</Color>
    <Color x:Key="ThemeDarkSurface">#303030</Color>
    <Color x:Key="ThemeDarkOnBackground">#ffffff</Color>
    <Color x:Key="ThemeDarkOnSurface">#ffffff</Color>
    <Color x:Key="ThemeDarkOutline">#444444</Color>
    <Color x:Key="ThemeDarkMuted">#adb5bd</Color>
    
    <!-- No custom font -->
    <x:String x:Key="ThemeFontFamily"></x:String>
    
    <!-- Standard Bootstrap corners -->
    <x:Double x:Key="ThemeCornerRadius">6</x:Double>
    <x:Double x:Key="ThemeCornerRadiusSm">4</x:Double>
    <x:Double x:Key="ThemeCornerRadiusLg">8</x:Double>
    
</ResourceDictionary>
