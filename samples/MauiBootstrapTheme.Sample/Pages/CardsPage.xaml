<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiBootstrapTheme.Sample.Pages.CardsPage"
             Title="Cards">
    
    <ScrollView>
        <VerticalStackLayout Spacing="24" Padding="20">
            
            <!-- Page Header (matches Blazor h1 + lead) -->
            <VerticalStackLayout Spacing="4">
                <Label Text="Cards &amp; Containers"
                       StyleClass="h1" />
                <Label Text="Bootstrap card components with shadows"
                       StyleClass="text-muted"
                       FontSize="18" />
            </VerticalStackLayout>
            
            <!-- Shadow Variants Section -->
            <VerticalStackLayout Spacing="12">
                <Label Text="Shadow Variants" StyleClass="h4" />
                <Grid ColumnDefinitions="*,*" ColumnSpacing="16" RowSpacing="16">
                    <Border StyleClass="card" Grid.Column="0">
                        <VerticalStackLayout>
                            <Label Text="No Shadow" StyleClass="h5" />
                            <Label Text="Default card without shadow" StyleClass="text-muted" />
                        </VerticalStackLayout>
                    </Border>
                    <Border StyleClass="card,shadow-sm" Grid.Column="1">
                        <VerticalStackLayout>
                            <Label Text="Small Shadow" StyleClass="h5" />
                            <Label Text="shadow-sm class" StyleClass="text-muted" />
                        </VerticalStackLayout>
                    </Border>
                </Grid>
                <Grid ColumnDefinitions="*,*" ColumnSpacing="16">
                    <Border StyleClass="card,shadow" Grid.Column="0">
                        <VerticalStackLayout>
                            <Label Text="Default Shadow" StyleClass="h5" />
                            <Label Text="shadow class" StyleClass="text-muted" />
                        </VerticalStackLayout>
                    </Border>
                    <Border StyleClass="card,shadow-lg" Grid.Column="1">
                        <VerticalStackLayout>
                            <Label Text="Large Shadow" StyleClass="h5" />
                            <Label Text="shadow-lg class" StyleClass="text-muted" />
                        </VerticalStackLayout>
                    </Border>
                </Grid>
            </VerticalStackLayout>
            
            <!-- Border Color Variants Section -->
            <VerticalStackLayout Spacing="12">
                <Label Text="Border Color Variants" StyleClass="h4" />
                <FlexLayout Wrap="Wrap" JustifyContent="Start">
                    <Border StyleClass="card" Stroke="{DynamicResource Primary}" WidthRequest="150" Margin="0,0,12,12">
                        <Label Text="Primary" HorizontalOptions="Center" />
                    </Border>
                    <Border StyleClass="card" Stroke="{DynamicResource Success}" WidthRequest="150" Margin="0,0,12,12">
                        <Label Text="Success" HorizontalOptions="Center" />
                    </Border>
                    <Border StyleClass="card" Stroke="{DynamicResource Danger}" WidthRequest="150" Margin="0,0,12,12">
                        <Label Text="Danger" HorizontalOptions="Center" />
                    </Border>
                    <Border StyleClass="card" Stroke="{DynamicResource Warning}" WidthRequest="150" Margin="0,0,12,12">
                        <Label Text="Warning" HorizontalOptions="Center" />
                    </Border>
                    <Border StyleClass="card" Stroke="{DynamicResource Info}" WidthRequest="150" Margin="0,0,12,12">
                        <Label Text="Info" HorizontalOptions="Center" />
                    </Border>
                </FlexLayout>
            </VerticalStackLayout>
            
            <!-- Background Variants Section -->
            <VerticalStackLayout Spacing="12">
                <Label Text="Background Variants" StyleClass="h4" />
                <Grid ColumnDefinitions="*,*,*" ColumnSpacing="12" RowSpacing="12">
                    <Border StyleClass="text-bg-primary,shadow-sm" Grid.Column="0">
                        <VerticalStackLayout>
                            <Label Text="Primary Background" StyleClass="h5,on-primary" />
                            <Label Text="text-bg-primary" StyleClass="on-primary" />
                        </VerticalStackLayout>
                    </Border>
                    <Border StyleClass="text-bg-success,shadow-sm" Grid.Column="1">
                        <VerticalStackLayout>
                            <Label Text="Success Background" StyleClass="h5,on-success" />
                            <Label Text="text-bg-success" StyleClass="on-success" />
                        </VerticalStackLayout>
                    </Border>
                    <Border StyleClass="text-bg-dark,shadow-sm" Grid.Column="2">
                        <VerticalStackLayout>
                            <Label Text="Dark Background" StyleClass="h5,on-dark" />
                            <Label Text="text-bg-dark" StyleClass="on-dark" />
                        </VerticalStackLayout>
                    </Border>
                </Grid>
            </VerticalStackLayout>
            
            <!-- Card with Header & Footer Section -->
            <VerticalStackLayout Spacing="12">
                <Label Text="Card with Header &amp; Footer" StyleClass="h4" />
                <Border StyleClass="card,shadow" Padding="0">
                    <VerticalStackLayout>
                        <Label Text="Featured" 
                               Padding="12,8" 
                               Background="{DynamicResource Gray100}" />
                        <BoxView HeightRequest="1" Color="{DynamicResource Outline}" />
                        <VerticalStackLayout Padding="16" Spacing="8">
                            <Label Text="Special Title" StyleClass="h5" />
                            <Label Text="With supporting text below as a natural lead-in to additional content." />
                            <Button Text="Go somewhere" 
                                    StyleClass="btn-primary"
                                    HorizontalOptions="Start" />
                        </VerticalStackLayout>
                        <BoxView HeightRequest="1" Color="{DynamicResource Outline}" />
                        <Label Text="2 days ago" 
                               Padding="12,8"
                               StyleClass="text-muted"
                               Background="{DynamicResource Gray100}" />
                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>
            
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>
