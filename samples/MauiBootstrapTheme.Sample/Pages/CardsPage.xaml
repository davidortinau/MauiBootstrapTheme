<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:theme="clr-namespace:MauiBootstrapTheme.Theming;assembly=MauiBootstrapTheme"
             x:Class="MauiBootstrapTheme.Sample.Pages.CardsPage"
             Title="Cards">
    
    <ScrollView>
        <VerticalStackLayout Spacing="24" Padding="20">
            
            <!-- Page Header (left-aligned like Blazor) -->
            <VerticalStackLayout Spacing="4">
                <Label Text="Cards &amp; Containers"
                       FontSize="32"
                       FontAttributes="Bold" />
                <Label Text="Bootstrap card components with shadows"
                       FontSize="18"
                       TextColor="Gray" />
            </VerticalStackLayout>
            
            <!-- Shadow Variants Section -->
            <VerticalStackLayout Spacing="12">
                <Label Text="Shadow Variants" FontSize="24" />
                <Grid ColumnDefinitions="*,*" ColumnSpacing="16" RowSpacing="16">
                    <Border Padding="16" Grid.Column="0" StrokeShape="RoundRectangle 6" Stroke="LightGray">
                        <VerticalStackLayout>
                            <Label Text="No Shadow" FontAttributes="Bold" />
                            <Label Text="Default card without shadow" TextColor="Gray" />
                        </VerticalStackLayout>
                    </Border>
                    <Border Padding="16" Grid.Column="1" theme:Bootstrap.Shadow="Small" StrokeShape="RoundRectangle 6">
                        <VerticalStackLayout>
                            <Label Text="Small Shadow" FontAttributes="Bold" />
                            <Label Text="shadow-sm class" TextColor="Gray" />
                        </VerticalStackLayout>
                    </Border>
                </Grid>
                <Grid ColumnDefinitions="*,*" ColumnSpacing="16">
                    <Border Padding="16" Grid.Column="0" theme:Bootstrap.Shadow="Default" StrokeShape="RoundRectangle 6">
                        <VerticalStackLayout>
                            <Label Text="Default Shadow" FontAttributes="Bold" />
                            <Label Text="shadow class" TextColor="Gray" />
                        </VerticalStackLayout>
                    </Border>
                    <Border Padding="16" Grid.Column="1" theme:Bootstrap.Shadow="Large" StrokeShape="RoundRectangle 6">
                        <VerticalStackLayout>
                            <Label Text="Large Shadow" FontAttributes="Bold" />
                            <Label Text="shadow-lg class" TextColor="Gray" />
                        </VerticalStackLayout>
                    </Border>
                </Grid>
            </VerticalStackLayout>
            
            <!-- Border Color Variants Section -->
            <VerticalStackLayout Spacing="12">
                <Label Text="Border Color Variants" FontSize="24" />
                <FlexLayout Wrap="Wrap" JustifyContent="Start">
                    <Border theme:Bootstrap.Variant="Primary" Padding="16" WidthRequest="150" Margin="0,0,12,12">
                        <Label Text="Primary" HorizontalOptions="Center" />
                    </Border>
                    <Border theme:Bootstrap.Variant="Success" Padding="16" WidthRequest="150" Margin="0,0,12,12">
                        <Label Text="Success" HorizontalOptions="Center" />
                    </Border>
                    <Border theme:Bootstrap.Variant="Danger" Padding="16" WidthRequest="150" Margin="0,0,12,12">
                        <Label Text="Danger" HorizontalOptions="Center" />
                    </Border>
                    <Border theme:Bootstrap.Variant="Warning" Padding="16" WidthRequest="150" Margin="0,0,12,12">
                        <Label Text="Warning" HorizontalOptions="Center" />
                    </Border>
                    <Border theme:Bootstrap.Variant="Info" Padding="16" WidthRequest="150" Margin="0,0,12,12">
                        <Label Text="Info" HorizontalOptions="Center" />
                    </Border>
                </FlexLayout>
            </VerticalStackLayout>
            
            <!-- Background Variants Section -->
            <VerticalStackLayout Spacing="12">
                <Label Text="Background Variants" FontSize="24" />
                <Grid ColumnDefinitions="*,*,*" ColumnSpacing="12" RowSpacing="12">
                    <Border theme:Bootstrap.BackgroundVariant="Primary" theme:Bootstrap.Shadow="Small" Padding="16" Grid.Column="0">
                        <VerticalStackLayout>
                            <Label Text="Primary Background" FontAttributes="Bold" TextColor="White" />
                            <Label Text="text-bg-primary" TextColor="White" />
                        </VerticalStackLayout>
                    </Border>
                    <Border theme:Bootstrap.BackgroundVariant="Success" theme:Bootstrap.Shadow="Small" Padding="16" Grid.Column="1">
                        <VerticalStackLayout>
                            <Label Text="Success Background" FontAttributes="Bold" TextColor="White" />
                            <Label Text="text-bg-success" TextColor="White" />
                        </VerticalStackLayout>
                    </Border>
                    <Border theme:Bootstrap.BackgroundVariant="Dark" theme:Bootstrap.Shadow="Small" Padding="16" Grid.Column="2">
                        <VerticalStackLayout>
                            <Label Text="Dark Background" FontAttributes="Bold" TextColor="White" />
                            <Label Text="text-bg-dark" TextColor="White" />
                        </VerticalStackLayout>
                    </Border>
                </Grid>
            </VerticalStackLayout>
            
            <!-- Card with Header & Footer Section -->
            <VerticalStackLayout Spacing="12">
                <Label Text="Card with Header &amp; Footer" FontSize="24" />
                <Border theme:Bootstrap.Shadow="Default" Padding="0" StrokeShape="RoundRectangle 6" Stroke="LightGray">
                    <VerticalStackLayout>
                        <Label Text="Featured" 
                               Padding="12,8" 
                               BackgroundColor="#f8f9fa" />
                        <BoxView HeightRequest="1" Color="LightGray" />
                        <VerticalStackLayout Padding="16" Spacing="8">
                            <Label Text="Special Title" FontSize="18" FontAttributes="Bold" />
                            <Label Text="With supporting text below as a natural lead-in to additional content." />
                            <Button Text="Go somewhere" 
                                    theme:Bootstrap.Variant="Primary"
                                    HeightRequest="38"
                                    HorizontalOptions="Start" />
                        </VerticalStackLayout>
                        <BoxView HeightRequest="1" Color="LightGray" />
                        <Label Text="2 days ago" 
                               Padding="12,8"
                               TextColor="Gray"
                               BackgroundColor="#f8f9fa" />
                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>
            
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>
