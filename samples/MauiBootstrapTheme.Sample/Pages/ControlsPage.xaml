<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiBootstrapTheme.Sample.Pages.ControlsPage"
             Title="Controls">

    <ScrollView>
        <VerticalStackLayout Spacing="24"
                Padding="20">

            <!-- Page Header (matches Blazor h1 + lead) -->
            <VerticalStackLayout Spacing="4">
                <Label Text="Bootstrap Controls"
                       StyleClass="h1"/>
                <Label Text="Stock MAUI controls styled with Bootstrap 5 theme values."
                       StyleClass="text-muted"
                       FontSize="18"/>
            </VerticalStackLayout>

            <BoxView HeightRequest="1"
                    Color="{DynamicResource OutlineVariant}"
                    Margin="0,4"/>

            <!-- Buttons Section -->
            <VerticalStackLayout Spacing="8">
                <Label Text="Buttons"
                        StyleClass="h4"/>
                <FlexLayout Wrap="Wrap"
                        JustifyContent="Start"
                        AlignItems="Center">
                    <Button Text="Primary"
                            StyleClass="btn-primary"
                            Margin="0,0,8,8"/>
                    <Button Text="Secondary"
                            StyleClass="btn-secondary"
                            Margin="0,0,8,8"/>
                    <Button Text="Success"
                            StyleClass="btn-success"
                            Margin="0,0,8,8"/>
                    <Button Text="Danger"
                            StyleClass="btn-danger"
                            Margin="0,0,8,8"/>
                    <Button Text="Warning"
                            StyleClass="btn-warning"
                            Margin="0,0,8,8"/>
                    <Button Text="Info"
                            StyleClass="btn-info"
                            Margin="0,0,8,8"/>
                </FlexLayout>
            </VerticalStackLayout>

            <!-- Outline Buttons Section -->
            <VerticalStackLayout Spacing="8">
                <Label Text="Outline Buttons"
                        StyleClass="h5"/>
                <FlexLayout Wrap="Wrap"
                        JustifyContent="Start"
                        AlignItems="Center">
                    <Button Text="Primary"
                            StyleClass="btn-outline-primary"
                            Margin="0,0,8,8"/>
                    <Button Text="Secondary"
                            StyleClass="btn-outline-secondary"
                            Margin="0,0,8,8"/>
                    <Button Text="Success"
                            StyleClass="btn-outline-success"
                            Margin="0,0,8,8"/>
                    <Button Text="Danger"
                            StyleClass="btn-outline-danger"
                            Margin="0,0,8,8"/>
                </FlexLayout>
            </VerticalStackLayout>

            <!-- Button Sizes Section -->
            <VerticalStackLayout Spacing="8">
                <Label Text="Button Sizes"
                        StyleClass="h5"/>
                <FlexLayout Wrap="Wrap"
                        JustifyContent="Start"
                        AlignItems="Center">
                    <Button Text="Large"
                            StyleClass="btn-primary,btn-lg"
                            Margin="0,0,8,8"/>
                    <Button Text="Default"
                            StyleClass="btn-primary"
                            Margin="0,0,8,8"/>
                    <Button Text="Small"
                            StyleClass="btn-primary,btn-sm"
                            Margin="0,0,8,8"/>
                </FlexLayout>
            </VerticalStackLayout>

            <!-- Pill Buttons Section -->
            <VerticalStackLayout Spacing="8">
                <Label Text="Pill Buttons"
                        StyleClass="h5"/>
                <FlexLayout Wrap="Wrap"
                        JustifyContent="Start"
                        AlignItems="Center">
                    <Button Text="Primary Pill"
                            StyleClass="btn-primary,btn-pill"
                            Margin="0,0,8,8"/>
                    <Button Text="Success Pill"
                            StyleClass="btn-success,btn-pill"
                            Margin="0,0,8,8"/>
                </FlexLayout>
            </VerticalStackLayout>

            <!-- Progress Section -->
            <VerticalStackLayout Spacing="12">
                <Label Text="Progress"
                        StyleClass="h4"/>

                <VerticalStackLayout Spacing="4">
                    <Label Text="Primary (75%)"/>
                    <ProgressBar Progress="0.75"/>
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="4">
                    <Label Text="Success (50%)"/>
                    <ProgressBar Progress="0.5"
                            StyleClass="progress-success"/>
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="4">
                    <Label Text="Danger (25%)"/>
                    <ProgressBar Progress="0.25"
                            StyleClass="progress-danger"/>
                </VerticalStackLayout>
            </VerticalStackLayout>

            <!-- Spinners Section -->
            <VerticalStackLayout Spacing="8">
                <Label Text="Spinners"
                        StyleClass="h4"/>
                <HorizontalStackLayout Spacing="16">
                    <ActivityIndicator IsRunning="True"
                            Color="{DynamicResource Primary}"/>
                    <ActivityIndicator IsRunning="True"
                            Color="{DynamicResource Success}"/>
                    <ActivityIndicator IsRunning="True"
                            Color="{DynamicResource Danger}"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
