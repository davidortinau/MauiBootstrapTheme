<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:theme="clr-namespace:MauiBootstrapTheme.Theming;assembly=MauiBootstrapTheme"
             x:Class="MauiBootstrapTheme.Sample.Pages.ControlsPage"
             Title="Controls">
    
    <ScrollView>
        <VerticalStackLayout Spacing="24" Padding="20">
            
            <!-- Page Header (left-aligned like Blazor) -->
            <VerticalStackLayout Spacing="4">
                <Label Text="Bootstrap Controls"
                       FontSize="32"
                       FontAttributes="Bold" />
                <Label Text="Stock MAUI controls styled with Bootstrap 5 theme values."
                       FontSize="18"
                       TextColor="Gray" />
            </VerticalStackLayout>
            
            <!-- Buttons Section -->
            <VerticalStackLayout Spacing="8">
                <Label Text="Buttons" FontSize="24" />
                <FlexLayout Wrap="Wrap" JustifyContent="Start" AlignItems="Center">
                    <Button Text="Primary" HeightRequest="38" Margin="0,0,8,8"
                            theme:Bootstrap.Variant="Primary" />
                    <Button Text="Secondary" HeightRequest="38" Margin="0,0,8,8"
                            theme:Bootstrap.Variant="Secondary" />
                    <Button Text="Success" HeightRequest="38" Margin="0,0,8,8"
                            theme:Bootstrap.Variant="Success" />
                    <Button Text="Danger" HeightRequest="38" Margin="0,0,8,8"
                            theme:Bootstrap.Variant="Danger" />
                    <Button Text="Warning" HeightRequest="38" Margin="0,0,8,8"
                            theme:Bootstrap.Variant="Warning" />
                    <Button Text="Info" HeightRequest="38" Margin="0,0,8,8"
                            theme:Bootstrap.Variant="Info" />
                </FlexLayout>
            </VerticalStackLayout>
            
            <!-- Outline Buttons Section -->
            <VerticalStackLayout Spacing="8">
                <Label Text="Outline Buttons" FontSize="20" />
                <FlexLayout Wrap="Wrap" JustifyContent="Start" AlignItems="Center">
                    <Button Text="Primary" HeightRequest="38" Margin="0,0,8,8"
                            theme:Bootstrap.Variant="Primary" 
                            theme:Bootstrap.IsOutlined="True" />
                    <Button Text="Secondary" HeightRequest="38" Margin="0,0,8,8"
                            theme:Bootstrap.Variant="Secondary" 
                            theme:Bootstrap.IsOutlined="True" />
                    <Button Text="Success" HeightRequest="38" Margin="0,0,8,8"
                            theme:Bootstrap.Variant="Success" 
                            theme:Bootstrap.IsOutlined="True" />
                    <Button Text="Danger" HeightRequest="38" Margin="0,0,8,8"
                            theme:Bootstrap.Variant="Danger" 
                            theme:Bootstrap.IsOutlined="True" />
                </FlexLayout>
            </VerticalStackLayout>
            
            <!-- Button Sizes Section -->
            <VerticalStackLayout Spacing="8">
                <Label Text="Button Sizes" FontSize="20" />
                <FlexLayout Wrap="Wrap" JustifyContent="Start" AlignItems="Center">
                    <Button Text="Large" HeightRequest="48" Margin="0,0,8,8"
                            theme:Bootstrap.Variant="Primary"
                            theme:Bootstrap.Size="Large" />
                    <Button Text="Default" HeightRequest="38" Margin="0,0,8,8"
                            theme:Bootstrap.Variant="Primary" />
                    <Button Text="Small" HeightRequest="31" Margin="0,0,8,8"
                            theme:Bootstrap.Variant="Primary"
                            theme:Bootstrap.Size="Small" />
                </FlexLayout>
            </VerticalStackLayout>
            
            <!-- Pill Buttons Section -->
            <VerticalStackLayout Spacing="8">
                <Label Text="Pill Buttons" FontSize="20" />
                <FlexLayout Wrap="Wrap" JustifyContent="Start" AlignItems="Center">
                    <Button Text="Primary Pill" HeightRequest="38" Margin="0,0,8,8"
                            theme:Bootstrap.Variant="Primary"
                            theme:Bootstrap.IsPill="True" />
                    <Button Text="Success Pill" HeightRequest="38" Margin="0,0,8,8"
                            theme:Bootstrap.Variant="Success"
                            theme:Bootstrap.IsPill="True" />
                </FlexLayout>
            </VerticalStackLayout>
            
            <!-- Progress Section -->
            <VerticalStackLayout Spacing="12">
                <Label Text="Progress" FontSize="24" />
                
                <VerticalStackLayout Spacing="4">
                    <Label Text="Primary (75%)" FontSize="14" />
                    <ProgressBar Progress="0.75" HeightRequest="16"
                                 theme:Bootstrap.Variant="Primary" />
                </VerticalStackLayout>
                
                <VerticalStackLayout Spacing="4">
                    <Label Text="Success (50%)" FontSize="14" />
                    <ProgressBar Progress="0.5" HeightRequest="16"
                                 theme:Bootstrap.Variant="Success" />
                </VerticalStackLayout>
                
                <VerticalStackLayout Spacing="4">
                    <Label Text="Danger (25%)" FontSize="14" />
                    <ProgressBar Progress="0.25" HeightRequest="16"
                                 theme:Bootstrap.Variant="Danger" />
                </VerticalStackLayout>
            </VerticalStackLayout>
            
            <!-- Spinners Section -->
            <VerticalStackLayout Spacing="8">
                <Label Text="Spinners" FontSize="24" />
                <HorizontalStackLayout Spacing="16">
                    <ActivityIndicator IsRunning="True" Color="{x:Static theme:BootstrapTheme.Primary}" />
                    <ActivityIndicator IsRunning="True" Color="{x:Static theme:BootstrapTheme.Success}" />
                    <ActivityIndicator IsRunning="True" Color="{x:Static theme:BootstrapTheme.Danger}" />
                </HorizontalStackLayout>
            </VerticalStackLayout>
            
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>
