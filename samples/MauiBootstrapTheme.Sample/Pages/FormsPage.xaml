<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:theme="clr-namespace:MauiBootstrapTheme.Theming;assembly=MauiBootstrapTheme"
             x:Class="MauiBootstrapTheme.Sample.Pages.FormsPage"
             Title="Forms">
    
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            
            <!-- Header -->
            <Label Text="Form Examples"
                   StyleClass="h1"
                   HorizontalOptions="Center" />
            
            <Label Text="Real-world form layouts using Bootstrap-themed controls."
                   StyleClass="lead,text-muted"
                   HorizontalOptions="Center" />
            
            <!-- Login Form -->
            <Border StyleClass="card">
                <VerticalStackLayout Spacing="16">
                    <Label Text="Login" StyleClass="h4" HorizontalOptions="Center" />
                    
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Email address" StyleClass="small" />
                        <Entry Placeholder="name@example.com" 
                               Keyboard="Email" />
                    </VerticalStackLayout>
                    
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Password" StyleClass="small" />
                        <Entry Placeholder="Password" 
                               IsPassword="True" />
                    </VerticalStackLayout>
                    
                    <HorizontalStackLayout Spacing="8">
                        <CheckBox />
                        <Label Text="Remember me" VerticalOptions="Center" />
                    </HorizontalStackLayout>
                    
                    <Button Text="Sign In"
                            StyleClass="btn-primary"
                            HorizontalOptions="Fill" />
                </VerticalStackLayout>
            </Border>
            
            <!-- Contact Form -->
            <Border StyleClass="card">
                <VerticalStackLayout Spacing="16">
                    <Label Text="Contact Us" StyleClass="h4" HorizontalOptions="Center" />
                    
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                        <VerticalStackLayout Spacing="4">
                            <Label Text="First Name" StyleClass="small" />
                            <Entry Placeholder="John" />
                        </VerticalStackLayout>
                        
                        <VerticalStackLayout Spacing="4" Grid.Column="1">
                            <Label Text="Last Name" StyleClass="small" />
                            <Entry Placeholder="Doe" />
                        </VerticalStackLayout>
                    </Grid>
                    
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Email" StyleClass="small" />
                        <Entry Placeholder="john.doe@example.com" 
                               Keyboard="Email" />
                    </VerticalStackLayout>
                    
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Subject" StyleClass="small" />
                        <Picker Title="Select a topic">
                            <Picker.ItemsSource>
                                <x:Array Type="{x:Type x:String}">
                                    <x:String>General Inquiry</x:String>
                                    <x:String>Technical Support</x:String>
                                    <x:String>Sales</x:String>
                                    <x:String>Feedback</x:String>
                                </x:Array>
                            </Picker.ItemsSource>
                        </Picker>
                    </VerticalStackLayout>
                    
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Message" StyleClass="small" />
                        <Editor Placeholder="Your message here..."
                                HeightRequest="120" />
                    </VerticalStackLayout>
                    
                    <HorizontalStackLayout Spacing="12" HorizontalOptions="End">
                        <Button Text="Cancel" StyleClass="btn-outline-secondary" />
                        <Button Text="Send Message" 
                                StyleClass="btn-success" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Border>
            
            <!-- Validation Example -->
            <Border StyleClass="card">
                <VerticalStackLayout Spacing="16">
                    <Label Text="Validation States" StyleClass="h4" HorizontalOptions="Center" />
                    
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Valid Input" StyleClass="small" />
                        <Entry Text="Valid entry"
                               theme:Bootstrap.Variant="Success" />
                        <Label Text="✓ Looks good!" StyleClass="small,text-success" />
                    </VerticalStackLayout>
                    
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Invalid Input" StyleClass="small" />
                        <Entry Placeholder="Required field"
                               theme:Bootstrap.Variant="Danger" />
                        <Label Text="✗ This field is required." StyleClass="small,text-danger" />
                    </VerticalStackLayout>
                    
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Warning Input" StyleClass="small" />
                        <Entry Text="Check this value"
                               theme:Bootstrap.Variant="Warning" />
                        <Label Text="⚠ Please verify this value." StyleClass="small,text-warning" />
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Border>
            
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>
