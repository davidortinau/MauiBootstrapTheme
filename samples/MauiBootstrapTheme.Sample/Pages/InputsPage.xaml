<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:theme="clr-namespace:MauiBootstrapTheme.Theming;assembly=MauiBootstrapTheme"
             x:Class="MauiBootstrapTheme.Sample.Pages.InputsPage"
             Title="Inputs">
    
    <ScrollView>
        <VerticalStackLayout Spacing="24" Padding="20">
            
            <!-- Page Header (left-aligned like Blazor) -->
            <VerticalStackLayout Spacing="4">
                <Label Text="Input Controls"
                       FontSize="32"
                       FontAttributes="Bold" />
                <Label Text="Form inputs with Bootstrap styling"
                       FontSize="18"
                       TextColor="Gray" />
            </VerticalStackLayout>
            
            <!-- Text Inputs Section -->
            <VerticalStackLayout Spacing="12">
                <Label Text="Text Inputs" FontSize="24" />
                
                <VerticalStackLayout Spacing="4">
                    <Label Text="Default Input" FontSize="14" />
                    <Entry Placeholder="Enter text..." HeightRequest="38" />
                </VerticalStackLayout>
                
                <VerticalStackLayout Spacing="4">
                    <Label Text="Large Input" FontSize="14" />
                    <Entry Placeholder="Large input" HeightRequest="48"
                           theme:Bootstrap.Size="Large" />
                </VerticalStackLayout>
                
                <VerticalStackLayout Spacing="4">
                    <Label Text="Small Input" FontSize="14" />
                    <Entry Placeholder="Small input" HeightRequest="31"
                           theme:Bootstrap.Size="Small" />
                </VerticalStackLayout>
            </VerticalStackLayout>
            
            <!-- Textarea Section -->
            <VerticalStackLayout Spacing="12">
                <Label Text="Textarea" FontSize="24" />
                
                <VerticalStackLayout Spacing="4">
                    <Label Text="Default Textarea" FontSize="14" />
                    <Editor Placeholder="Enter multi-line text..." HeightRequest="100" />
                </VerticalStackLayout>
            </VerticalStackLayout>
            
            <!-- Select Section -->
            <VerticalStackLayout Spacing="12">
                <Label Text="Select" FontSize="24" />
                
                <VerticalStackLayout Spacing="4">
                    <Label Text="Default Select" FontSize="14" />
                    <Picker Title="Choose an option...">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Option 1</x:String>
                                <x:String>Option 2</x:String>
                                <x:String>Option 3</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>
                </VerticalStackLayout>
            </VerticalStackLayout>
            
            <!-- Date & Time Section -->
            <VerticalStackLayout Spacing="12">
                <Label Text="Date &amp; Time" FontSize="24" />
                
                <HorizontalStackLayout Spacing="20">
                    <VerticalStackLayout Spacing="4" HorizontalOptions="FillAndExpand">
                        <Label Text="Date" FontSize="14" />
                        <DatePicker />
                    </VerticalStackLayout>
                    
                    <VerticalStackLayout Spacing="4" HorizontalOptions="FillAndExpand">
                        <Label Text="Time" FontSize="14" />
                        <TimePicker />
                    </VerticalStackLayout>
                </HorizontalStackLayout>
            </VerticalStackLayout>
            
            <!-- Checkboxes & Switches Section -->
            <VerticalStackLayout Spacing="12">
                <Label Text="Checkboxes &amp; Switches" FontSize="24" />
                
                <HorizontalStackLayout Spacing="8">
                    <CheckBox IsChecked="True" theme:Bootstrap.Variant="Primary" />
                    <Label Text="Default checkbox" VerticalOptions="Center" />
                </HorizontalStackLayout>
                
                <HorizontalStackLayout Spacing="8">
                    <CheckBox theme:Bootstrap.Variant="Primary" />
                    <Label Text="Unchecked checkbox" VerticalOptions="Center" />
                </HorizontalStackLayout>
                
                <HorizontalStackLayout Spacing="8">
                    <Switch IsToggled="True" theme:Bootstrap.Variant="Primary" />
                    <Label Text="Enabled switch" VerticalOptions="Center" />
                </HorizontalStackLayout>
                
                <HorizontalStackLayout Spacing="8">
                    <Switch theme:Bootstrap.Variant="Primary" />
                    <Label Text="Disabled switch" VerticalOptions="Center" />
                </HorizontalStackLayout>
            </VerticalStackLayout>
            
            <!-- Radio Buttons Section (simulated with RadioButton) -->
            <VerticalStackLayout Spacing="12">
                <Label Text="Radio Buttons" FontSize="24" />
                
                <VerticalStackLayout RadioButtonGroup.GroupName="radioGroup">
                    <RadioButton Content="Option 1" IsChecked="True" />
                    <RadioButton Content="Option 2" />
                    <RadioButton Content="Option 3" />
                </VerticalStackLayout>
            </VerticalStackLayout>
            
            <!-- Range Slider Section -->
            <VerticalStackLayout Spacing="12">
                <Label Text="Range Slider" FontSize="24" />
                
                <VerticalStackLayout Spacing="4">
                    <Label Text="Default Range" FontSize="14" />
                    <Slider Minimum="0" Maximum="100" Value="50" 
                            theme:Bootstrap.Variant="Primary" />
                </VerticalStackLayout>
            </VerticalStackLayout>
            
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>
