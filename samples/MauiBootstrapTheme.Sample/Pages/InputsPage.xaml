<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiBootstrapTheme.Sample.Pages.InputsPage"
             Title="Inputs">

    <ScrollView>
        <VerticalStackLayout Spacing="24"
                Padding="20">

            <!-- Page Header (matches Blazor h1 + lead) -->
            <VerticalStackLayout Spacing="4">
                <Label Text="Input Controls"
                       StyleClass="h1"/>
                <Label Text="Form inputs with Bootstrap styling"
                       StyleClass="lead,text-muted"/>
            </VerticalStackLayout>

            <!-- Text Inputs Section -->
            <VerticalStackLayout Spacing="12">
                <Label Text="Text Inputs"
                        StyleClass="h4"/>

                <VerticalStackLayout Spacing="4">
                    <Label Text="Default Input" StyleClass="form-label"/>
                    <Entry Placeholder="Enter text..."
                           StyleClass="form-control"/>
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="4">
                    <Label Text="Large Input" StyleClass="form-label"/>
                    <Entry Placeholder="Large input"
                           StyleClass="form-control,form-control-lg"/>
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="4">
                    <Label Text="Small Input" StyleClass="form-label"/>
                    <Entry Placeholder="Small input"
                           StyleClass="form-control,form-control-sm"/>
                </VerticalStackLayout>
            </VerticalStackLayout>

            <!-- Textarea Section -->
            <VerticalStackLayout Spacing="12">
                <Label Text="Textarea"
                        StyleClass="h4"/>

                <VerticalStackLayout Spacing="4">
                    <Label Text="Default Textarea" StyleClass="form-label"/>
                    <Editor Placeholder="Enter multi-line text..."
                            HeightRequest="100"
                            StyleClass="form-control"/>
                </VerticalStackLayout>
            </VerticalStackLayout>

            <!-- Select Section -->
            <VerticalStackLayout Spacing="12">
                <Label Text="Select"
                        StyleClass="h4"/>

                <VerticalStackLayout Spacing="4">
                    <Label Text="Default Select" StyleClass="form-label"/>
                    <Picker Title="Choose an option..."
                            StyleClass="form-select">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Option 1</x:String>
                                <x:String>Option 2</x:String>
                                <x:String>Option 3</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>
                </VerticalStackLayout>
            </VerticalStackLayout>

            <!-- Date & Time Section -->
            <VerticalStackLayout Spacing="12">
                <Label Text="Date &amp; Time"
                        StyleClass="h4"/>

                <Grid ColumnDefinitions="*,*"
                      ColumnSpacing="20">
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Date" StyleClass="form-label"/>
                        <DatePicker StyleClass="form-control"/>
                    </VerticalStackLayout>

                    <VerticalStackLayout Grid.Column="1"
                                         Spacing="4">
                        <Label Text="Time" StyleClass="form-label"/>
                        <TimePicker StyleClass="form-control"/>
                    </VerticalStackLayout>
                </Grid>
            </VerticalStackLayout>

            <!-- Checkboxes & Switches Section -->
            <VerticalStackLayout Spacing="12">
                <Label Text="Checkboxes &amp; Switches"
                        StyleClass="h4"/>

                <HorizontalStackLayout Spacing="8">
                    <CheckBox IsChecked="True"
                            StyleClass="form-check-input"
                            Color="{DynamicResource Primary}"/>
                    <Label Text="Default checkbox"
                            StyleClass="form-check-label"
                            VerticalOptions="Center"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="8">
                    <CheckBox StyleClass="form-check-input"
                            Color="{DynamicResource Primary}"/>
                    <Label Text="Unchecked checkbox"
                            StyleClass="form-check-label"
                            VerticalOptions="Center"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="8">
                    <Switch IsToggled="True"
                            StyleClass="form-switch"
                            OnColor="{DynamicResource Primary}"/>
                    <Label Text="Enabled switch"
                            StyleClass="form-check-label"
                            VerticalOptions="Center"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="8">
                    <Switch StyleClass="form-switch"
                            OnColor="{DynamicResource Primary}"/>
                    <Label Text="Disabled switch"
                            StyleClass="form-check-label"
                            VerticalOptions="Center"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>

            <!-- Radio Buttons Section -->
            <VerticalStackLayout Spacing="12">
                <Label Text="Radio Buttons"
                        StyleClass="h4"/>

                <VerticalStackLayout RadioButtonGroup.GroupName="radioGroup">
                    <RadioButton Content="Option 1"
                            StyleClass="form-check-input"
                            IsChecked="True"/>
                    <RadioButton Content="Option 2"
                            StyleClass="form-check-input"/>
                    <RadioButton Content="Option 3"
                            StyleClass="form-check-input"/>
                </VerticalStackLayout>
            </VerticalStackLayout>

            <!-- Range Slider Section -->
            <VerticalStackLayout Spacing="12">
                <Label Text="Range Slider"
                        StyleClass="h4"/>

                <VerticalStackLayout Spacing="4">
                    <Label Text="Default Range" StyleClass="form-label"/>
                    <Slider Minimum="0"
                            Maximum="100"
                            Value="50"
                            StyleClass="form-range"
                            MinimumTrackColor="{DynamicResource Primary}"
                            ThumbColor="{DynamicResource Primary}"/>
                </VerticalStackLayout>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
