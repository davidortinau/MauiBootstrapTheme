<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiBootstrapTheme.Sample.Pages.TypographyPage"
             Title="Typography">

    <ScrollView>
        <VerticalStackLayout Spacing="24"
                             Padding="20">

            <!-- Page Header (left-aligned like Blazor) -->
            <VerticalStackLayout Spacing="4">
                <Label Text="Typography"
                       StyleClass="h1"/>
                <Label Text="Bootstrap typography utilities"
                       StyleClass="lead"/>
            </VerticalStackLayout>

            <BoxView HeightRequest="1"
                     Color="{DynamicResource OutlineVariant}"
                     Margin="0,4"/>

            <!-- Headings Section -->
            <VerticalStackLayout Spacing="12">
                <Label Text="Headings"
                       StyleClass="h4"/>
                <Border StyleClass="card">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Heading 1 (h1)"
                               StyleClass="h1"/>
                        <Label Text="Heading 2 (h2)"
                               StyleClass="h2"/>
                        <Label Text="Heading 3 (h3)"
                               StyleClass="h3"/>
                        <Label Text="Heading 4 (h4)"
                               StyleClass="h4"/>
                        <Label Text="Heading 5 (h5)"
                               StyleClass="h5"/>
                        <Label Text="Heading 6 (h6)"
                               StyleClass="h6"/>
                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>

            <!-- Text Styles Section -->
            <VerticalStackLayout Spacing="12">
                <Label Text="Text Styles"
                       StyleClass="h4"/>
                <Border StyleClass="card">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="This is lead text - larger and lighter for introductory content."
                               StyleClass="lead"/>
                        <Label Text="This is normal body text. Lorem ipsum dolor sit amet, consectetur adipiscing elit."/>
                        <Label Text="This is small text for fine print."
                               StyleClass="small"/>
                        <Label Text="This is muted text for secondary content."
                               StyleClass="text-muted"/>
                        <Label Text="This is marked/highlighted text."
                               StyleClass="mark"/>
                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>

            <!-- Text Colors Section -->
            <VerticalStackLayout Spacing="12">
                <Label Text="Text Colors"
                       StyleClass="h4"/>
                <Border StyleClass="card">
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Primary text color"
                               StyleClass="text-primary"/>
                        <Label Text="Secondary text color"
                               StyleClass="text-secondary"/>
                        <Label Text="Success text color"
                               StyleClass="text-success"/>
                        <Label Text="Danger text color"
                               StyleClass="text-danger"/>
                        <Label Text="Warning text color"
                               StyleClass="text-warning"/>
                        <Label Text="Info text color"
                               StyleClass="text-info"/>
                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>

            <!-- Badges Section -->
            <VerticalStackLayout Spacing="12">
                <Label Text="Badges"
                       StyleClass="h4"/>
                <Border StyleClass="card">
                    <VerticalStackLayout Spacing="12">
                        <FlexLayout Wrap="Wrap"
                                    AlignItems="Center"
                                    JustifyContent="Start">
                            <Border StyleClass="badge,bg-primary" Margin="0,0,8,8"><Label Text="Primary" StyleClass="on-primary,small"/></Border>
                            <Border StyleClass="badge,bg-secondary" Margin="0,0,8,8"><Label Text="Secondary" StyleClass="on-secondary,small"/></Border>
                            <Border StyleClass="badge,bg-success" Margin="0,0,8,8"><Label Text="Success" StyleClass="on-success,small"/></Border>
                            <Border StyleClass="badge,bg-danger" Margin="0,0,8,8"><Label Text="Danger" StyleClass="on-danger,small"/></Border>
                            <Border StyleClass="badge,bg-warning" Margin="0,0,8,8"><Label Text="Warning" StyleClass="on-warning,small"/></Border>
                            <Border StyleClass="badge,bg-info" Margin="0,0,8,8"><Label Text="Info" StyleClass="on-info,small"/></Border>
                        </FlexLayout>

                        <Label Text="Pill Badges"
                               StyleClass="h6"/>
                        <FlexLayout Wrap="Wrap"
                                    AlignItems="Center"
                                    JustifyContent="Start">
                            <Border StyleClass="badge,bg-primary" Margin="0,0,8,8"><Label Text="Primary" StyleClass="on-primary,small"/></Border>
                            <Border StyleClass="badge,bg-success" Margin="0,0,8,8"><Label Text="Success" StyleClass="on-success,small"/></Border>
                            <Border StyleClass="badge,bg-danger" Margin="0,0,8,8"><Label Text="Danger" StyleClass="on-danger,small"/></Border>
                        </FlexLayout>

                        <Label Text="Badge with Text"
                               StyleClass="h6"/>
                        <HorizontalStackLayout Spacing="8">
                            <Label Text="Messages"
                                   VerticalOptions="Center"/>
                            <Border StyleClass="badge,bg-primary" VerticalOptions="Center"><Label Text="4" StyleClass="on-primary,small"/></Border>
                            <Label Text="Notifications"
                                   VerticalOptions="Center"
                                   Margin="12,0,0,0"/>
                            <Border StyleClass="badge,bg-danger" VerticalOptions="Center"><Label Text="99+" StyleClass="on-danger,small"/></Border>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
