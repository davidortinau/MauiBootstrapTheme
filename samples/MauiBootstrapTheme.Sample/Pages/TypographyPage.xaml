<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:theme="clr-namespace:MauiBootstrapTheme.Theming;assembly=MauiBootstrapTheme"
             x:Class="MauiBootstrapTheme.Sample.Pages.TypographyPage"
             Title="Typography">
    
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            
            <!-- Headings -->
            <Border theme:Bootstrap.Shadow="Small" Padding="20">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Headings" theme:Bootstrap.Heading="3" />
                    <BoxView HeightRequest="1" Color="LightGray" Margin="0,0,0,10" />
                    
                    <Label Text="Heading 1 (h1)" theme:Bootstrap.Heading="1" />
                    <Label Text="Heading 2 (h2)" theme:Bootstrap.Heading="2" />
                    <Label Text="Heading 3 (h3)" theme:Bootstrap.Heading="3" />
                    <Label Text="Heading 4 (h4)" theme:Bootstrap.Heading="4" />
                    <Label Text="Heading 5 (h5)" theme:Bootstrap.Heading="5" />
                    <Label Text="Heading 6 (h6)" theme:Bootstrap.Heading="6" />
                </VerticalStackLayout>
            </Border>
            
            <!-- Text Styles -->
            <Border theme:Bootstrap.Shadow="Small" Padding="20">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Text Styles" theme:Bootstrap.Heading="3" />
                    <BoxView HeightRequest="1" Color="LightGray" Margin="0,0,0,10" />
                    
                    <Label Text="This is lead text - larger and lighter for introductory content." 
                           theme:Bootstrap.TextStyle="Lead" />
                    
                    <Label Text="This is normal body text. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua." />
                    
                    <Label Text="This is small text for fine print or secondary information."
                           theme:Bootstrap.TextStyle="Small" />
                    
                    <Label Text="This is muted text for less important content."
                           theme:Bootstrap.TextStyle="Muted" />
                    
                    <HorizontalStackLayout>
                        <Label Text="You can " />
                        <Label Text="highlight text"
                               theme:Bootstrap.TextStyle="Mark" />
                        <Label Text=" like this." />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Border>
            
            <!-- Text Colors -->
            <Border theme:Bootstrap.Shadow="Small" Padding="20">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Text Colors" theme:Bootstrap.Heading="3" />
                    <BoxView HeightRequest="1" Color="LightGray" Margin="0,0,0,10" />
                    
                    <Label Text="Primary text color" theme:Bootstrap.TextColorVariant="Primary" />
                    <Label Text="Secondary text color" theme:Bootstrap.TextColorVariant="Secondary" />
                    <Label Text="Success text color" theme:Bootstrap.TextColorVariant="Success" />
                    <Label Text="Danger text color" theme:Bootstrap.TextColorVariant="Danger" />
                    <Label Text="Warning text color" theme:Bootstrap.TextColorVariant="Warning" />
                    <Label Text="Info text color" theme:Bootstrap.TextColorVariant="Info" />
                    <Label Text="Light text color (on dark bg)" theme:Bootstrap.TextColorVariant="Light" BackgroundColor="#212529" Padding="4" />
                    <Label Text="Dark text color" theme:Bootstrap.TextColorVariant="Dark" />
                </VerticalStackLayout>
            </Border>
            
            <!-- Badges -->
            <Border theme:Bootstrap.Shadow="Small" Padding="20">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Badges" theme:Bootstrap.Heading="3" />
                    <BoxView HeightRequest="1" Color="LightGray" Margin="0,0,0,10" />
                    
                    <FlexLayout Wrap="Wrap" AlignItems="Center" JustifyContent="Start">
                        <Label Text="Primary" theme:Bootstrap.Badge="Primary" Margin="4" />
                        <Label Text="Secondary" theme:Bootstrap.Badge="Secondary" Margin="4" />
                        <Label Text="Success" theme:Bootstrap.Badge="Success" Margin="4" />
                        <Label Text="Danger" theme:Bootstrap.Badge="Danger" Margin="4" />
                        <Label Text="Warning" theme:Bootstrap.Badge="Warning" Margin="4" />
                        <Label Text="Info" theme:Bootstrap.Badge="Info" Margin="4" />
                        <Label Text="Light" theme:Bootstrap.Badge="Light" Margin="4" />
                        <Label Text="Dark" theme:Bootstrap.Badge="Dark" Margin="4" />
                    </FlexLayout>
                    
                    <Label Text="Badges in context:" theme:Bootstrap.TextStyle="Small" Margin="0,10,0,0" />
                    
                    <HorizontalStackLayout Spacing="8">
                        <Label Text="Messages" theme:Bootstrap.Heading="5" VerticalOptions="Center" />
                        <Label Text="4" theme:Bootstrap.Badge="Primary" VerticalOptions="Center" />
                    </HorizontalStackLayout>
                    
                    <HorizontalStackLayout Spacing="8">
                        <Label Text="Notifications" theme:Bootstrap.Heading="5" VerticalOptions="Center" />
                        <Label Text="New" theme:Bootstrap.Badge="Success" VerticalOptions="Center" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Border>
            
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>
