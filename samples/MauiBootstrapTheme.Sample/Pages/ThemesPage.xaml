<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:theme="clr-namespace:MauiBootstrapTheme.Theming;assembly=MauiBootstrapTheme"
             x:Class="MauiBootstrapTheme.Sample.Pages.ThemesPage"
             Title="Themes">
    
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            
            <Label Text="Theme Switcher" theme:Bootstrap.Heading="2" HorizontalOptions="Center" />
            <Label Text="Switch between Bootstrap themes at runtime" theme:Bootstrap.TextStyle="Lead" HorizontalOptions="Center" />
            
            <!-- Theme Selection -->
            <Border theme:Bootstrap.Shadow="Small" Padding="16">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Select Theme" theme:Bootstrap.Heading="4" />
                    
                    <FlexLayout Wrap="Wrap" JustifyContent="Start">
                        <Button Text="Default" Clicked="OnDefaultThemeClicked" theme:Bootstrap.Variant="Primary" Margin="4" />
                        <Button Text="Darkly" Clicked="OnDarklyThemeClicked" theme:Bootstrap.Variant="Dark" Margin="4" />
                        <Button Text="Cyborg" Clicked="OnCyborgThemeClicked" theme:Bootstrap.Variant="Secondary" Margin="4" />
                        <Button Text="Minty" Clicked="OnMintyThemeClicked" theme:Bootstrap.Variant="Success" Margin="4" />
                        <Button Text="Slate" Clicked="OnSlateThemeClicked" theme:Bootstrap.Variant="Info" Margin="4" />
                        <Button Text="Flatly" Clicked="OnFlatlyThemeClicked" theme:Bootstrap.Variant="Primary" Margin="4" />
                        <Button Text="Sketchy" Clicked="OnSketchyThemeClicked" theme:Bootstrap.Variant="Warning" Margin="4" />
                        <Button Text="Vapor" Clicked="OnVaporThemeClicked" theme:Bootstrap.Variant="Danger" Margin="4" />
                        <Button Text="Brite" Clicked="OnBriteThemeClicked" theme:Bootstrap.Variant="Success" Margin="4" />
                    </FlexLayout>
                </VerticalStackLayout>
            </Border>
            
            <!-- Preview Controls -->
            <Border Padding="16" x:Name="PreviewFrame" theme:Bootstrap.Shadow="Default">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Preview" theme:Bootstrap.Heading="4" x:Name="PreviewLabel" />
                    
                    <Entry x:Name="PreviewEntry" Placeholder="Sample Entry" theme:Bootstrap.Variant="Primary" />
                    
                    <HorizontalStackLayout Spacing="8" HorizontalOptions="Center">
                        <Button x:Name="PreviewBtn1" Text="Primary" theme:Bootstrap.Variant="Primary" />
                        <Button x:Name="PreviewBtn2" Text="Success" theme:Bootstrap.Variant="Success" />
                        <Button x:Name="PreviewBtn3" Text="Danger" theme:Bootstrap.Variant="Danger" />
                    </HorizontalStackLayout>
                    
                    <HorizontalStackLayout Spacing="8" HorizontalOptions="Center">
                        <Button x:Name="PreviewBtn4" Text="Outline" theme:Bootstrap.Variant="Primary" theme:Bootstrap.IsOutlined="True" />
                        <Button x:Name="PreviewBtn5" Text="Pill" theme:Bootstrap.Variant="Info" theme:Bootstrap.IsPill="True" />
                    </HorizontalStackLayout>
                    
                    <Editor x:Name="PreviewEditor" Placeholder="Sample Editor" HeightRequest="60" theme:Bootstrap.Variant="Default" />
                </VerticalStackLayout>
            </Border>
            
            <Label x:Name="CurrentThemeLabel" Text="Current: Default" theme:Bootstrap.TextStyle="Muted" HorizontalOptions="Center" />
            
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>
