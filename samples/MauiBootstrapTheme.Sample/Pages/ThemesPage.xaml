<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiBootstrapTheme.Sample.Pages.ThemesPage"
             Title="Themes">

    <ScrollView>
        <VerticalStackLayout Spacing="24"
                             Padding="20">

            <!-- Page Header (matches Blazor h1 + lead) -->
            <VerticalStackLayout Spacing="4">
                <Label Text="Theme Switcher"
                       StyleClass="h1"/>
                <Label Text="Switch between Bootstrap themes at runtime"
                       StyleClass="lead,text-muted"/>
            </VerticalStackLayout>

            <BoxView HeightRequest="1"
                     Color="{DynamicResource OutlineVariant}"
                     Margin="0,4"/>

            <!-- Select Theme Section (matches Blazor) -->
            <VerticalStackLayout Spacing="12">
                <Label Text="Select Theme"
                       StyleClass="h4"/>
                <FlexLayout Wrap="Wrap"
                            JustifyContent="Start">
                    <Button Text="Default"
                            AutomationId="ThemeButton_Default"
                            Clicked="OnDefaultThemeClicked"
                            StyleClass="btn-primary"
                            Margin="0,0,8,8"/>
                    <Button Text="Darkly"
                            AutomationId="ThemeButton_Darkly"
                            Clicked="OnDarklyThemeClicked"
                            StyleClass="btn-dark"
                            Margin="0,0,8,8"/>
                    <Button Text="Slate"
                            AutomationId="ThemeButton_Slate"
                            Clicked="OnSlateThemeClicked"
                            StyleClass="btn-secondary"
                            Margin="0,0,8,8"/>
                    <Button Text="Flatly"
                            AutomationId="ThemeButton_Flatly"
                            Clicked="OnFlatlyThemeClicked"
                            StyleClass="btn-info"
                            Margin="0,0,8,8"/>
                    <Button Text="Sketchy"
                            AutomationId="ThemeButton_Sketchy"
                            Clicked="OnSketchyThemeClicked"
                            StyleClass="btn-warning"
                            Margin="0,0,8,8"/>
                    <Button Text="Vapor"
                            AutomationId="ThemeButton_Vapor"
                            Clicked="OnVaporThemeClicked"
                            StyleClass="btn-danger"
                            Margin="0,0,8,8"/>
                    <Button Text="Brite"
                            AutomationId="ThemeButton_Brite"
                            Clicked="OnBriteThemeClicked"
                            StyleClass="btn-success"
                            Margin="0,0,8,8"/>
                </FlexLayout>
                <Label x:Name="CurrentThemeLabel"
                       AutomationId="CurrentThemeLabel"
                       Text="Current: bootstrap"
                       StyleClass="text-muted"/>
            </VerticalStackLayout>

            <!-- Preview Section (matches Blazor card shadow) -->
            <VerticalStackLayout Spacing="12">
                <Label Text="Preview"
                       StyleClass="h4"/>
                <Border StyleClass="card,shadow">
                    <VerticalStackLayout Spacing="12">
                        <Label Text="Theme Preview"
                               StyleClass="h5"/>

                        <Entry Placeholder="Sample input"
                               StyleClass="form-control"/>

                        <FlexLayout Wrap="Wrap"
                                    JustifyContent="Start">
                            <Button Text="Primary"
                                    StyleClass="btn-primary"
                                    Margin="0,0,8,8"/>
                            <Button Text="Success"
                                    StyleClass="btn-success"
                                    Margin="0,0,8,8"/>
                            <Button Text="Danger"
                                    StyleClass="btn-danger"
                                    Margin="0,0,8,8"/>
                        </FlexLayout>

                        <FlexLayout Wrap="Wrap"
                                    JustifyContent="Start">
                            <Button Text="Outline"
                                    StyleClass="btn-outline-primary"
                                    Margin="0,0,8,8"/>
                            <Button Text="Pill"
                                    StyleClass="btn-info,btn-pill"
                                    Margin="0,0,8,8"/>
                        </FlexLayout>

                        <ProgressBar Progress="0.65"/>

                        <FlexLayout Wrap="Wrap"
                                    JustifyContent="Start">
                            <Border StyleClass="badge,bg-primary"
                                    Margin="0,0,8,8">
                                <Label Text="Badge"
                                       StyleClass="on-primary,small"/>
                            </Border>
                            <Border StyleClass="badge,bg-success"
                                    Margin="0,0,8,8">
                                <Label Text="Success"
                                       StyleClass="on-success,small"/>
                            </Border>
                            <Border StyleClass="badge,bg-danger"
                                    Margin="0,0,8,8">
                                <Label Text="Alert"
                                       StyleClass="on-danger,small"/>
                            </Border>
                        </FlexLayout>
                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>

            <!-- All Color Variants Section (matches Blazor text-bg-* cards) -->
            <VerticalStackLayout Spacing="12">
                <Label Text="All Color Variants"
                       StyleClass="h4"/>
                <Grid RowDefinitions="Auto,Auto,Auto,Auto"
                      ColumnDefinitions="*,*"
                      RowSpacing="8"
                      ColumnSpacing="8">
                    <Border StyleClass="text-bg-primary"
                            Grid.Row="0"
                            Grid.Column="0">
                        <Label Text="Primary"
                               HorizontalOptions="Center"
                               StyleClass="on-primary"/>
                    </Border>
                    <Border StyleClass="text-bg-secondary"
                            Grid.Row="0"
                            Grid.Column="1">
                        <Label Text="Secondary"
                               HorizontalOptions="Center"
                               StyleClass="on-secondary"/>
                    </Border>
                    <Border StyleClass="text-bg-success"
                            Grid.Row="1"
                            Grid.Column="0">
                        <Label Text="Success"
                               HorizontalOptions="Center"
                               StyleClass="on-success"/>
                    </Border>
                    <Border StyleClass="text-bg-danger"
                            Grid.Row="1"
                            Grid.Column="1">
                        <Label Text="Danger"
                               HorizontalOptions="Center"
                               StyleClass="on-danger"/>
                    </Border>
                    <Border StyleClass="text-bg-warning"
                            Grid.Row="2"
                            Grid.Column="0">
                        <Label Text="Warning"
                               HorizontalOptions="Center"
                               StyleClass="on-warning"/>
                    </Border>
                    <Border StyleClass="text-bg-info"
                            Grid.Row="2"
                            Grid.Column="1">
                        <Label Text="Info"
                               HorizontalOptions="Center"
                               StyleClass="on-info"/>
                    </Border>
                    <Border StyleClass="text-bg-light"
                            Grid.Row="3"
                            Grid.Column="0">
                        <Label Text="Light"
                               HorizontalOptions="Center"
                               StyleClass="on-light"/>
                    </Border>
                    <Border StyleClass="text-bg-dark"
                            Grid.Row="3"
                            Grid.Column="1">
                        <Label Text="Dark"
                               HorizontalOptions="Center"
                               StyleClass="on-dark"/>
                    </Border>
                </Grid>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
