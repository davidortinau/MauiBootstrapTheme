<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:theme="clr-namespace:MauiBootstrapTheme.Theming;assembly=MauiBootstrapTheme"
             x:Class="MauiBootstrapTheme.Sample.Pages.ThemesPage"
             Title="Themes">
    
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            
            <!-- Header -->
            <Label Text="Theme Switcher"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />
            
            <Label Text="Switch between different Bootstrap themes at runtime."
                   FontSize="14"
                   TextColor="Gray"
                   HorizontalOptions="Center" />
            
            <!-- Theme Selection -->
            <Frame Padding="16" CornerRadius="8" BorderColor="LightGray">
                <VerticalStackLayout Spacing="16">
                    <Label Text="Select Theme" FontAttributes="Bold" FontSize="18" />
                    
                    <Button Text="Default (Bootstrap 5)" 
                            Clicked="OnDefaultThemeClicked"
                            theme:Bootstrap.Variant="Primary" />
                    
                    <Button Text="Darkly (Dark Mode)" 
                            Clicked="OnDarklyThemeClicked"
                            theme:Bootstrap.Variant="Dark" />
                    
                    <Button Text="Cyborg (Cyberpunk)" 
                            Clicked="OnCyborgThemeClicked"
                            theme:Bootstrap.Variant="Secondary" />
                    
                    <Button Text="Minty (Fresh Pastels)" 
                            Clicked="OnMintyThemeClicked"
                            theme:Bootstrap.Variant="Success" />
                    
                    <Button Text="Slate (Professional Gray)" 
                            Clicked="OnSlateThemeClicked"
                            theme:Bootstrap.Variant="Info" />
                </VerticalStackLayout>
            </Frame>
            
            <!-- Preview Controls -->
            <Frame Padding="16" CornerRadius="8" BorderColor="LightGray" x:Name="PreviewFrame">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Preview" FontAttributes="Bold" FontSize="18" x:Name="PreviewLabel" />
                    
                    <Entry x:Name="PreviewEntry" Placeholder="Sample Entry" theme:Bootstrap.Variant="Primary" />
                    
                    <HorizontalStackLayout Spacing="8" HorizontalOptions="Center">
                        <Button x:Name="PreviewBtn1" Text="Primary" theme:Bootstrap.Variant="Primary" />
                        <Button x:Name="PreviewBtn2" Text="Success" theme:Bootstrap.Variant="Success" />
                        <Button x:Name="PreviewBtn3" Text="Danger" theme:Bootstrap.Variant="Danger" />
                    </HorizontalStackLayout>
                    
                    <HorizontalStackLayout Spacing="8" HorizontalOptions="Center">
                        <Button x:Name="PreviewBtn4" Text="Outline" theme:Bootstrap.Variant="Primary" theme:Bootstrap.IsOutlined="True" />
                        <Button x:Name="PreviewBtn5" Text="Pill" theme:Bootstrap.Variant="Info" theme:Bootstrap.IsPill="True" />
                    </HorizontalStackLayout>
                    
                    <Editor x:Name="PreviewEditor" Placeholder="Sample Editor" HeightRequest="60" theme:Bootstrap.Variant="Default" />
                </VerticalStackLayout>
            </Frame>
            
            <Label x:Name="CurrentThemeLabel" 
                   Text="Current: Default Bootstrap 5" 
                   FontSize="12" 
                   TextColor="Gray" 
                   HorizontalOptions="Center" />
            
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>
