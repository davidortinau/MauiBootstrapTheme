<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:theme="clr-namespace:MauiBootstrapTheme.Theming;assembly=MauiBootstrapTheme"
             x:Class="MauiBootstrapTheme.Sample.Pages.VariantsPage"
             Title="Variants">
    
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            
            <!-- Header -->
            <Label Text="Color Variants"
                   StyleClass="h1"
                   HorizontalOptions="Center" />
            
            <Label Text="All Bootstrap color variants applied to various controls."
                   StyleClass="lead,text-muted"
                   HorizontalOptions="Center" />
            
            <!-- Primary -->
            <Border StyleClass="card,text-bg-primary">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Primary" StyleClass="h5,on-primary" />
                    <Entry Placeholder="Primary Entry" theme:Bootstrap.Variant="Primary" />
                    <Button Text="Primary Button" StyleClass="btn-primary" />
                    <Button Text="Primary Outline" StyleClass="btn-outline-primary" />
                </VerticalStackLayout>
            </Border>
            
            <!-- Secondary -->
            <Border StyleClass="card,text-bg-secondary">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Secondary" StyleClass="h5,on-secondary" />
                    <Entry Placeholder="Secondary Entry" theme:Bootstrap.Variant="Secondary" />
                    <Button Text="Secondary Button" StyleClass="btn-secondary" />
                    <Button Text="Secondary Outline" StyleClass="btn-outline-secondary" />
                </VerticalStackLayout>
            </Border>
            
            <!-- Success -->
            <Border StyleClass="card,text-bg-success">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Success" StyleClass="h5,on-success" />
                    <Entry Placeholder="Success Entry" theme:Bootstrap.Variant="Success" />
                    <Button Text="Success Button" StyleClass="btn-success" />
                    <Button Text="Success Outline" StyleClass="btn-outline-success" />
                </VerticalStackLayout>
            </Border>
            
            <!-- Danger -->
            <Border StyleClass="card,text-bg-danger">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Danger" StyleClass="h5,on-danger" />
                    <Entry Placeholder="Danger Entry" theme:Bootstrap.Variant="Danger" />
                    <Button Text="Danger Button" StyleClass="btn-danger" />
                    <Button Text="Danger Outline" StyleClass="btn-outline-danger" />
                </VerticalStackLayout>
            </Border>
            
            <!-- Warning -->
            <Border StyleClass="card,text-bg-warning">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Warning" StyleClass="h5,on-warning" />
                    <Entry Placeholder="Warning Entry" theme:Bootstrap.Variant="Warning" />
                    <Button Text="Warning Button" StyleClass="btn-warning" />
                    <Button Text="Warning Outline" StyleClass="btn-outline-warning" />
                </VerticalStackLayout>
            </Border>
            
            <!-- Info -->
            <Border StyleClass="card,text-bg-info">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Info" StyleClass="h5,on-info" />
                    <Entry Placeholder="Info Entry" theme:Bootstrap.Variant="Info" />
                    <Button Text="Info Button" StyleClass="btn-info" />
                    <Button Text="Info Outline" StyleClass="btn-outline-info" />
                </VerticalStackLayout>
            </Border>
            
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>
