<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:theme="clr-namespace:MauiBootstrapTheme.Theming;assembly=MauiBootstrapTheme"
             x:Class="MauiBootstrapTheme.Sample.Pages.VariantsPage"
             Title="Variants">
    
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            
            <VerticalStackLayout Spacing="4">
                <Label Text="Color Variants"
                       StyleClass="h1" />
                <Label Text="All Bootstrap color variants applied to controls for parity comparison."
                       StyleClass="lead,text-muted" />
            </VerticalStackLayout>
            
            <!-- Primary -->
            <Border StyleClass="card,text-bg-primary">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Primary" StyleClass="h5,on-primary" />
                    <Entry Placeholder="Primary Entry" StyleClass="form-control" />
                    <FlexLayout Wrap="Wrap" AlignItems="Center">
                        <Button Text="Primary Button" StyleClass="btn-primary" Margin="0,0,8,8" />
                        <Button Text="Primary Outline" StyleClass="btn-outline-primary" Margin="0,0,8,8" />
                    </FlexLayout>
                </VerticalStackLayout>
            </Border>
            
            <!-- Secondary -->
            <Border StyleClass="card,text-bg-secondary">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Secondary" StyleClass="h5,on-secondary" />
                    <Entry Placeholder="Secondary Entry" StyleClass="form-control" />
                    <FlexLayout Wrap="Wrap" AlignItems="Center">
                        <Button Text="Secondary Button" StyleClass="btn-secondary" Margin="0,0,8,8" />
                        <Button Text="Secondary Outline" StyleClass="btn-outline-secondary" Margin="0,0,8,8" />
                    </FlexLayout>
                </VerticalStackLayout>
            </Border>
            
            <!-- Success -->
            <Border StyleClass="card,text-bg-success">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Success" StyleClass="h5,on-success" />
                    <Entry Placeholder="Success Entry" StyleClass="form-control" />
                    <FlexLayout Wrap="Wrap" AlignItems="Center">
                        <Button Text="Success Button" StyleClass="btn-success" Margin="0,0,8,8" />
                        <Button Text="Success Outline" StyleClass="btn-outline-success" Margin="0,0,8,8" />
                    </FlexLayout>
                </VerticalStackLayout>
            </Border>
            
            <!-- Danger -->
            <Border StyleClass="card,text-bg-danger">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Danger" StyleClass="h5,on-danger" />
                    <Entry Placeholder="Danger Entry" StyleClass="form-control" />
                    <FlexLayout Wrap="Wrap" AlignItems="Center">
                        <Button Text="Danger Button" StyleClass="btn-danger" Margin="0,0,8,8" />
                        <Button Text="Danger Outline" StyleClass="btn-outline-danger" Margin="0,0,8,8" />
                    </FlexLayout>
                </VerticalStackLayout>
            </Border>
            
            <!-- Warning -->
            <Border StyleClass="card,text-bg-warning">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Warning" StyleClass="h5,on-warning" />
                    <Entry Placeholder="Warning Entry" StyleClass="form-control" />
                    <FlexLayout Wrap="Wrap" AlignItems="Center">
                        <Button Text="Warning Button" StyleClass="btn-warning" Margin="0,0,8,8" />
                        <Button Text="Warning Outline" StyleClass="btn-outline-warning" Margin="0,0,8,8" />
                    </FlexLayout>
                </VerticalStackLayout>
            </Border>
            
            <!-- Info -->
            <Border StyleClass="card,text-bg-info">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Info" StyleClass="h5,on-info" />
                    <Entry Placeholder="Info Entry" StyleClass="form-control" />
                    <FlexLayout Wrap="Wrap" AlignItems="Center">
                        <Button Text="Info Button" StyleClass="btn-info" Margin="0,0,8,8" />
                        <Button Text="Info Outline" StyleClass="btn-outline-info" Margin="0,0,8,8" />
                    </FlexLayout>
                </VerticalStackLayout>
            </Border>
            
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>
