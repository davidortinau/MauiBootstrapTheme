<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:theme="clr-namespace:MauiBootstrapTheme.Theming;assembly=MauiBootstrapTheme"
             x:Class="MauiBootstrapTheme.Sample.Pages.SpacingPage"
             Title="Spacing">
    
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            
            <!-- Header -->
            <Label Text="Spacing Utilities"
                   StyleClass="h2"
                   HorizontalOptions="Center" />
            
            <Label Text="Bootstrap spacing scale (0-5) for margin and padding"
                   StyleClass="lead"
                   HorizontalOptions="Center" />
            
            <!-- Spacing Scale Reference -->
            <Border StyleClass="shadow-sm" Padding="16">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Spacing Scale" StyleClass="h4" />
                    <Label Text="• Level 0 = 0px" StyleClass="small" />
                    <Label Text="• Level 1 = 4px (0.25rem)" StyleClass="small" />
                    <Label Text="• Level 2 = 8px (0.5rem)" StyleClass="small" />
                    <Label Text="• Level 3 = 16px (1rem)" StyleClass="small" />
                    <Label Text="• Level 4 = 24px (1.5rem)" StyleClass="small" />
                    <Label Text="• Level 5 = 48px (3rem)" StyleClass="small" />
                </VerticalStackLayout>
            </Border>
            
            <!-- Margin Examples -->
            <Label Text="Margin Examples" StyleClass="h4" />
            
            <Border Background="LightGray" Padding="4">
                <VerticalStackLayout Spacing="4">
                    <Border Background="White" theme:Bootstrap.MarginLevel="0">
                        <Label Text="MarginLevel=0" Padding="8" />
                    </Border>
                    
                    <Border Background="White" theme:Bootstrap.MarginLevel="1">
                        <Label Text="MarginLevel=1 (4px)" Padding="8" />
                    </Border>
                    
                    <Border Background="White" theme:Bootstrap.MarginLevel="2">
                        <Label Text="MarginLevel=2 (8px)" Padding="8" />
                    </Border>
                    
                    <Border Background="White" theme:Bootstrap.MarginLevel="3">
                        <Label Text="MarginLevel=3 (16px)" Padding="8" />
                    </Border>
                    
                    <Border Background="White" theme:Bootstrap.MarginLevel="4">
                        <Label Text="MarginLevel=4 (24px)" Padding="8" />
                    </Border>
                    
                    <Border Background="White" theme:Bootstrap.MarginLevel="5">
                        <Label Text="MarginLevel=5 (48px)" Padding="8" />
                    </Border>
                </VerticalStackLayout>
            </Border>
            
            <!-- Padding Examples -->
            <Label Text="Padding Examples" StyleClass="h4" />
            
            <VerticalStackLayout Spacing="8">
                <Border Background="#e9ecef">
                    <VerticalStackLayout theme:Bootstrap.PaddingLevel="0" BackgroundColor="#0d6efd">
                        <Label Text="PaddingLevel=0" TextColor="White" />
                    </VerticalStackLayout>
                </Border>
                
                <Border Background="#e9ecef">
                    <VerticalStackLayout theme:Bootstrap.PaddingLevel="1" BackgroundColor="#0d6efd">
                        <Label Text="PaddingLevel=1 (4px)" TextColor="White" />
                    </VerticalStackLayout>
                </Border>
                
                <Border Background="#e9ecef">
                    <VerticalStackLayout theme:Bootstrap.PaddingLevel="2" BackgroundColor="#0d6efd">
                        <Label Text="PaddingLevel=2 (8px)" TextColor="White" />
                    </VerticalStackLayout>
                </Border>
                
                <Border Background="#e9ecef">
                    <VerticalStackLayout theme:Bootstrap.PaddingLevel="3" BackgroundColor="#0d6efd">
                        <Label Text="PaddingLevel=3 (16px)" TextColor="White" />
                    </VerticalStackLayout>
                </Border>
                
                <Border Background="#e9ecef">
                    <VerticalStackLayout theme:Bootstrap.PaddingLevel="4" BackgroundColor="#0d6efd">
                        <Label Text="PaddingLevel=4 (24px)" TextColor="White" />
                    </VerticalStackLayout>
                </Border>
                
                <Border Background="#e9ecef">
                    <VerticalStackLayout theme:Bootstrap.PaddingLevel="5" BackgroundColor="#0d6efd">
                        <Label Text="PaddingLevel=5 (48px)" TextColor="White" />
                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>
            
            <!-- Combined Example -->
            <Label Text="Combined Example" StyleClass="h4" />
            
            <Border StyleClass="shadow" Padding="0">
                <VerticalStackLayout theme:Bootstrap.PaddingLevel="4">
                    <Label Text="Card with PaddingLevel=4" StyleClass="h5" />
                    
                    <Button Text="Button with MarginLevel=3" 
                            StyleClass="btn-primary"
                            theme:Bootstrap.MarginLevel="3" />
                    
                    <Label Text="Using Bootstrap spacing levels creates consistent visual rhythm throughout your app."
                           StyleClass="text-muted" />
                </VerticalStackLayout>
            </Border>
            
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>
