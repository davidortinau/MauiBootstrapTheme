@inherits LayoutComponentBase

<div class="d-flex flex-column min-vh-100">
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary sticky-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="">Bootstrap Theme</a>
            <button class="navbar-toggler" type="button" @onclick="ToggleNavMenu">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="@NavMenuCssClass" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link @GetActiveClass("")" href="" @onclick="CloseNavMenu">Controls</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @GetActiveClass("inputs")" href="inputs" @onclick="CloseNavMenu">Inputs</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @GetActiveClass("typography")" href="typography" @onclick="CloseNavMenu">Typography</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @GetActiveClass("cards")" href="cards" @onclick="CloseNavMenu">Cards</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @GetActiveClass("forms")" href="forms" @onclick="CloseNavMenu">Forms</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @GetActiveClass("spacing")" href="spacing" @onclick="CloseNavMenu">Spacing</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @GetActiveClass("variants")" href="variants" @onclick="CloseNavMenu">Variants</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @GetActiveClass("themes")" href="themes" @onclick="CloseNavMenu">Themes</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container flex-grow-1 py-4">
        @Body
    </main>

    <footer class="bg-light py-3 mt-auto">
        <div class="container text-center text-muted">
            <small>Bootstrap Theme Blazor Sample - Pure CSS baseline</small>
        </div>
    </footer>
</div>

@code {
    [Inject] NavigationManager? Navigation { get; set; }
    
    private bool collapseNavMenu = true;
    private string? NavMenuCssClass => collapseNavMenu ? "collapse navbar-collapse" : "navbar-collapse";

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private void CloseNavMenu()
    {
        collapseNavMenu = true;
    }

    string GetActiveClass(string page)
    {
        var uri = Navigation?.Uri ?? "";
        var relativePath = Navigation?.ToBaseRelativePath(uri) ?? "";
        return relativePath == page ? "active" : "";
    }
}
