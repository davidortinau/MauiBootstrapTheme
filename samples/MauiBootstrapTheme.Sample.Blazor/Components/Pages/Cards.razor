@page "/cards"

<div class="page-header">
    <h1>Cards & Containers</h1>
    <p class="lead">Bootstrap card components with shadows</p>
</div>

<div class="demo-section">
    <h4>Shadow Variants</h4>
    <div class="row g-4 mb-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">No Shadow</h5>
                    <p class="card-text text-muted">Default card without shadow</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Small Shadow</h5>
                    <p class="card-text text-muted">shadow-sm class</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h5 class="card-title">Default Shadow</h5>
                    <p class="card-text text-muted">shadow class</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-body">
                    <h5 class="card-title">Large Shadow</h5>
                    <p class="card-text text-muted">shadow-lg class</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="demo-section">
    <h4>Border Color Variants</h4>
    <div class="d-flex flex-wrap gap-3 mb-4">
        <div class="card border-primary" style="width: 150px;">
            <div class="card-body text-center">Primary</div>
        </div>
        <div class="card border-success" style="width: 150px;">
            <div class="card-body text-center">Success</div>
        </div>
        <div class="card border-danger" style="width: 150px;">
            <div class="card-body text-center">Danger</div>
        </div>
        <div class="card border-warning" style="width: 150px;">
            <div class="card-body text-center">Warning</div>
        </div>
        <div class="card border-info" style="width: 150px;">
            <div class="card-body text-center">Info</div>
        </div>
    </div>
</div>

<div class="demo-section">
    <h4>Background Variants</h4>
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card text-bg-primary shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Primary Background</h5>
                    <p class="card-text">text-bg-primary</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-bg-success shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Success Background</h5>
                    <p class="card-text">text-bg-success</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-bg-dark shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Dark Background</h5>
                    <p class="card-text">text-bg-dark</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="demo-section">
    <h4>Card with Header & Footer</h4>
    <div class="card shadow">
        <div class="card-header">
            Featured
        </div>
        <div class="card-body">
            <h5 class="card-title">Special Title</h5>
            <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
            <a href="#" class="btn btn-primary">Go somewhere</a>
        </div>
        <div class="card-footer text-muted">
            2 days ago
        </div>
    </div>
</div>
