@page "/typography"

<div class="page-header">
    <h1>Typography</h1>
    <p class="lead">Bootstrap typography utilities</p>
</div>

<div class="demo-section">
    <h4>Headings</h4>
    <div class="card mb-4">
        <div class="card-body">
            <h1>Heading 1 (h1)</h1>
            <h2>Heading 2 (h2)</h2>
            <h3>Heading 3 (h3)</h3>
            <h4>Heading 4 (h4)</h4>
            <h5>Heading 5 (h5)</h5>
            <h6>Heading 6 (h6)</h6>
        </div>
    </div>
</div>

<div class="demo-section">
    <h4>Text Styles</h4>
    <div class="card mb-4">
        <div class="card-body">
            <p class="lead">This is lead text - larger and lighter for introductory content.</p>
            <p>This is normal body text. Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
            <p><small>This is small text for fine print.</small></p>
            <p class="text-muted">This is muted text for secondary content.</p>
            <p><mark>This is marked/highlighted text.</mark></p>
        </div>
    </div>
</div>

<div class="demo-section">
    <h4>Text Colors</h4>
    <div class="card mb-4">
        <div class="card-body">
            <p class="text-primary">Primary text color</p>
            <p class="text-secondary">Secondary text color</p>
            <p class="text-success">Success text color</p>
            <p class="text-danger">Danger text color</p>
            <p class="text-warning bg-dark">Warning text color</p>
            <p class="text-info bg-dark">Info text color</p>
        </div>
    </div>
</div>

<div class="demo-section">
    <h4>Badges</h4>
    <div class="card mb-4">
        <div class="card-body">
            <div class="d-flex flex-wrap gap-2 mb-3">
                <span class="badge bg-primary">Primary</span>
                <span class="badge bg-secondary">Secondary</span>
                <span class="badge bg-success">Success</span>
                <span class="badge bg-danger">Danger</span>
                <span class="badge bg-warning text-dark">Warning</span>
                <span class="badge bg-info text-dark">Info</span>
            </div>
            
            <h5>Pill Badges</h5>
            <div class="d-flex flex-wrap gap-2 mb-3">
                <span class="badge rounded-pill bg-primary">Primary</span>
                <span class="badge rounded-pill bg-success">Success</span>
                <span class="badge rounded-pill bg-danger">Danger</span>
            </div>
            
            <h5>Badge with Text</h5>
            <p>
                Messages <span class="badge bg-primary">4</span>
                <span class="ms-3">Notifications</span> <span class="badge bg-danger">99+</span>
            </p>
        </div>
    </div>
</div>
