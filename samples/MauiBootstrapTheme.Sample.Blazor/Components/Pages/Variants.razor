@page "/variants"

<div class="page-header">
    <h1>Color Variants</h1>
    <p class="lead">All Bootstrap color variants applied to controls for parity comparison.</p>
</div>

@foreach (var variant in VariantNames)
{
    <div class="demo-section">
        <div class="card text-bg-@variant">
            <div class="card-body">
                <h5 class="card-title">@ToTitle(variant)</h5>
                <div class="mb-3">
                    <label class="form-label">Entry</label>
                    <input type="text" class="form-control" placeholder="@($"{ToTitle(variant)} Entry")" />
                </div>
                <div class="d-flex flex-wrap gap-2">
                    <button type="button" class="btn btn-@variant">@($"{ToTitle(variant)} Button")</button>
                    <button type="button" class="btn btn-outline-@variant">@($"{ToTitle(variant)} Outline")</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private static readonly string[] VariantNames = ["primary", "secondary", "success", "danger", "warning", "info"];

    private static string ToTitle(string value) =>
        string.IsNullOrEmpty(value) ? value : char.ToUpperInvariant(value[0]) + value[1..];
}
