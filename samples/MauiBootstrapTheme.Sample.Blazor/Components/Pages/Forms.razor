@page "/forms"

<div class="page-header">
    <h1>Forms</h1>
    <p class="lead">Canonical Bootstrap 5.3 form patterns for parity comparison.</p>
</div>

<div class="demo-section">
    <h4>Overview</h4>
    <form>
        <div class="mb-3">
            <label for="overviewEmail" class="form-label">Email address</label>
            <input type="email" class="form-control" id="overviewEmail" aria-describedby="emailHelp" placeholder="name@example.com" />
            <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
        </div>
        <div class="mb-3">
            <label for="overviewPassword" class="form-label">Password</label>
            <input type="password" class="form-control" id="overviewPassword" />
        </div>
        <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" id="overviewCheck" />
            <label class="form-check-label" for="overviewCheck">Check me out</label>
        </div>
        <button type="button" class="btn btn-primary">Submit</button>
    </form>
</div>

<div class="demo-section">
    <h4>Sizing</h4>
    <div class="mb-3">
        <label class="form-label">Large input</label>
        <input type="text" class="form-control form-control-lg" placeholder=".form-control-lg" />
    </div>
    <div class="mb-3">
        <label class="form-label">Default input</label>
        <input type="text" class="form-control" placeholder=".form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Small select</label>
        <select class="form-select form-select-sm">
            <option selected>.form-select-sm</option>
            <option>Option 1</option>
            <option>Option 2</option>
        </select>
    </div>
</div>

<div class="demo-section">
    <h4>Disabled forms</h4>
    <form>
        <fieldset disabled>
            <legend>Disabled fieldset example</legend>
            <div class="mb-3">
                <label for="disabledTextInput" class="form-label">Disabled input</label>
                <input type="text" id="disabledTextInput" class="form-control" placeholder="Disabled input" />
            </div>
            <div class="mb-3">
                <label for="disabledSelect" class="form-label">Disabled select menu</label>
                <select id="disabledSelect" class="form-select">
                    <option>Disabled select</option>
                </select>
            </div>
            <button type="button" class="btn btn-primary">Submit</button>
        </fieldset>
    </form>
</div>

<div class="demo-section">
    <h4>Form layout</h4>
    <div class="row g-3">
        <div class="col-md-6">
            <label class="form-label">First name</label>
            <input type="text" class="form-control" />
        </div>
        <div class="col-md-6">
            <label class="form-label">Last name</label>
            <input type="text" class="form-control" />
        </div>
        <div class="col-12">
            <label class="form-label">Email</label>
            <input type="email" class="form-control" />
        </div>
        <div class="col-12">
            <label class="form-label">Message</label>
            <textarea class="form-control" rows="3"></textarea>
        </div>
    </div>
</div>
